        <record model="ir.rule" id="quiz_category_multi_comp_rule">
            <field name="name">Quiz Category multi-company</field>
            <field name="model_id" ref="openeducat_quiz.model_op_quiz_category"/>
            <field name="global" eval="True"/>
            <field name="domain_force">
                ['|',('company_id','=',False),'&amp;',('company_id','in',company_ids),'|',('company_id','child_of',[user.company_id.id]),('company_id','in',user.company_ids.ids)]
