<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<record id="res_config_settings_view_form" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.inherit.isep</field>
      <field name="model">res.config.settings</field>
      <field name="priority" eval="10"/>
      <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
      <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="after">
                <div id="Certificados">
                        <h2>Certificados</h2>
                        <div class="row mt16 o_settings_container" id="isep_certiticados">

				<div class="col-12 col-lg-6 o_setting_box" title="Certificados para sellar documentos">
				    <div class="o_setting_left_pane"/>
				    <div class="o_setting_right_pane">
				        <span class="o_form_label">Sign Certificates</span>
				        <div class="text-muted">
						Configure your Sign Certificates.
					</div>
					<div class="row mt16">
					    <field name="op_sign_certificate_ids" string="Sign Certificates"/>
					</div>
				    </div>
				</div>
			</div>
                        <div class="row mt16 o_settings_container" id="isep_certiticados">

                            <div class="col-12 col-lg-6 o_setting_box" id="settings_certificados">
                                    <div class="o_setting_left_pane" />
                                    <div class="o_setting_right_pane">
                                        <span class="o_form_label">Producto para Certificado</span>
                                        <div class="content-group">
                                            <div class="row mt8">
                                                <label string="Producto" for="cert_product_id" class="col-lg-3 o_light_label"/>
                                                <field name="cert_product_id" placeholder="Producto para Certificado"/>
                                            </div>
                                            <div class="row mt8">
                                                <label string="Dias para Pago" for="cert_days_fpayment" class="col-lg-3 o_light_label"/>
                                                <field name="cert_days_fpayment" placeholder="Dias para esperar Pago"/>
                                            </div>
                                            <div class="row mt8">
                                                <label string="Dias para Descarga" for="cert_days_fdownload" class="col-lg-3 o_light_label"/>
                                                <field name="cert_days_fdownload" placeholder="Dias para Descargar"/> 
                                            </div>
                                        </div>
                                    </div>
                             </div>
                        </div>
                 </div>
            </xpath>
      </field>
  </record>







</odoo>
