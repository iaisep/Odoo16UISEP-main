<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="user_profile_sidebar">

        <!-- ========== SIDEBAR ========== -->
        <div class="col-12 col-md-4 col-lg-3 mt-3 mt-md-0">
            <div class="o_wprofile_sidebar bg-white px-3 py-2 py-md-3 mb-3 mb-md-5">


                <div t-if="user.has_group('openeducat_core.group_op_faculty')">
                <div class="o_wprofile_sidebar_top d-flex justify-content-between">
                    <div class="submenu_campus force_block">Profesor</div>
                </div>
                <div class="o_wprofile_sidebar_top d-flex justify-content-between">
                    <div class="d-flex bg-white border force_block">
                        <a href="/slides" class="subcampus_item">
                            <i class="fa fa-fw fa fa-bookmark me-1 small text-mcampus"/>
                         Contenido asignaturas
                        </a>
                    </div>                    
                </div>
                <div class="o_wprofile_sidebar_top d-flex justify-content-between">
                    <div class="d-flex bg-white border force_block">
                        <a href="/web#action=642"  target="_blank" class="subcampus_item">
                            <i class="fa fa-fw fa fa-bookmark me-1 small text-mcampus"/>
                            Calificar actividades
                        </a>
                    </div>                    
                </div>


                <div class="o_wprofile_sidebar_top d-flex justify-content-between">
                    <br/>
                </div>

                </div>



                <div class="o_wprofile_sidebar_top d-flex justify-content-between">
                    <div class="submenu_campus force_block">Mi contenido</div>
                </div>

                <div class="o_wprofile_sidebar_top d-flex justify-content-between">
                    <div class="d-flex bg-white border force_block">
                        <a href="/campus" class="subcampus_item">
                            <i class="fa fa-fw fa fa-bookmark me-1 small text-mcampus"/>
                        Inicio
                        </a>
                    </div>
                </div>
                <div class="o_wprofile_sidebar_top d-flex justify-content-between">
                    <div class="d-flex bg-white border force_block">
                        <a href="/student/assignment/details" class="subcampus_item">
                            <i class="fa fa-fw fa fa-bookmark me-1 small text-mcampus"/>
                        Tareas
                        </a>
                    </div>
                </div>
                
                <div class="o_wprofile_sidebar_top d-flex justify-content-between">
                    <div class="d-flex bg-white border force_block">
                        <a href="/campus/gradebook" class="subcampus_item">
                            <i class="fa fa-fw fa fa-bookmark me-1 small text-mcampus"/>
                        Calificaciones
                        </a>
                    </div>
                </div>
                <div class="o_wprofile_sidebar_top d-flex justify-content-between">
                    <div class="d-flex bg-white border force_block">
                        <a href="/campus/coming_soon" class="subcampus_item">
                            <i class="fa fa-fw fa fa-bookmark me-1 small text-mcampus"/>
                        Certificaciones
                        </a>
                    </div>
                </div>
                <div class="o_wprofile_sidebar_top d-flex justify-content-between">
                    <div class="d-flex bg-white border force_block">
                        <a href="/campus/coming_soon" class="subcampus_item">
                            <i class="fa fa-fw fa fa-bookmark me-1 small text-mcampus"/>
                        Diplomas
                        </a>
                    </div>
                </div>
                <div class="o_wprofile_sidebar_top d-flex justify-content-between">
                    <br/>
                </div>



                
                <div class="o_wprofile_sidebar_top d-flex justify-content-between">
                    <div t-if="user.rank_id" class="d-flex align-items-center">
                        <small class="fw-bold me-2">Rango actual:</small>
                        <img t-att-src="website.image_url(user.rank_id, 'image_128')" width="16" height="16" alt="" class="o_object_fit_cover me-1"/>
                        <a t-attf-href="/profile/ranks_badges?url_origin=#{request.httprequest.path}&amp;name_origin=#{user.name}" t-field="user.rank_id"/>
                    </div>
                    <button class="btn btn-sm d-md-none bg-white border" type="button" data-bs-toggle="collapse" data-bs-target="#o_wprofile_sidebar_collapse" aria-expanded="false" aria-controls="o_wprofile_sidebar_collapse">More info</button>
                </div>
                <div class="collapse d-md-block" id="o_wprofile_sidebar_collapse">
                    <t t-set="next_rank_id" t-value="user._get_next_rank()"/>
                    <small t-if="next_rank_id" class="fw-bold mt-1">Siguiente rango:</small>
                    <t t-if="next_rank_id or user.rank_id" t-call="website_profile.profile_next_rank_card">
                        <t t-set="img_max_width" t-value="'40%'"/>
                    </t>

                    <table class="table table-sm w-100" id="o_wprofile_sidebar_table">
                        <tbody>
                            <tr>
                                <th>
                                    <small class="fw-bold">Unido el</small>
                                </th>
                                <td>
                                    <span t-field="user.create_date" t-options="{&quot;format&quot;: &quot;d MMM Y&quot;}"/>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <small class="fw-bold">Insignias</small>
                                </th>
                                <td t-if="user.badge_ids" t-esc="len(user.badge_ids.filtered(lambda b: b.badge_id.website_published))"/>
                                <td t-else="">0</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>



    </template>




</odoo>
