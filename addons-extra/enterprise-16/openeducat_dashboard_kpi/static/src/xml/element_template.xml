    <t t-name="DashboardFieldBinaryImage" owl="1">
        <div class="o_field_image" aria-atomic="true">
            <t t-if="!props.readonly">
                <div class="o_form_image_controls">
                    <button type="button" t-attf-class=" fa fa-#{props.value ? props.value : 'image'} fa-lg image_widget_icon_container float-left"
                            t-on-click="onClickIconSelector"
                            title="Select Icons">
                    </button>
                    <button class="fa fa-trash-o fa-lg float-right o_clear_file_button" title="Clear"
                            t-on-click="onClear"
                            aria-label="Clear"/>
                    <span class="o_form_binary_progress">Uploading...</span>
                </div>
                <t t-call="icon_container_modal_template"/>
            </t>
        </div>
    </t>

    <t t-name="icon_container_modal_template" owl="1">
        <div t-ref="iconModal" class="modal fade" id="icon_container_modal_id" role="dialog">
            <div class="modal-dialog">

                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Select Icon</h4>
                    </div>
                    <div class="modal-body">
                        <div class="modal_icon_input_div">
                            <div class="search_modal_container">
                                <input t-ref="searchInput" type="search" id="site-search" placeholder="Search fa-icon.."
                                       name="fa Icon Input" aria-label="Search through site content" t-on-keyup="onInput"
                                       class="modal_icon_input"/>

                                <button class="fa_icon_search" t-on-click="onSearch">
                                    <i class="fa fa-search"/>
                                </button>
                            </div>
                            <section
                                    style="margin-top: 12px;font-size: 14px;text-align: justify;color: black;background:transparent;">
                                <strong>
                                    Note:
                                </strong>
                                Please use Font Awesome 4.7.0 icons only. E.g. 'fa-bell' or 'bell'.
                                For more information visit
                                <a href="https://fontawesome.com/v4.7.0/icons/" target="_blank">Font Awesome 4.7.0</a>
                            </section>
                        </div>
                        <div class="icon_container_grid_view">
                            <t t-foreach="icon_set" t-as="fa_icon" t-key="fa_icon">
                                <div class="icon_container_list" id="icon1" t-on-click="onIconClick" t-att-data-icon="fa_icon">
                                    <span t-att-id="'.'+fa_icon" t-att-class="'fa fa-' + fa_icon + ' fa-4x'" t-att-data-icon="fa_icon"/>
                                </div>
                            </t>
                            <t t-if="state.searchedIcon">
                                <div class="icon_container_list" id="icon1" t-on-click="onIconClick" t-att-data-icon="state.searchedIcon">
                                    <span t-att-id="'.'+state.searchedIcon" t-att-class="'fa fa-' + state.searchedIcon + ' fa-4x'" t-att-data-icon="state.searchedIcon"/>
                                </div>
                            </t>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary icon_container_open_button"
                                data-bs-dismiss="modal">Select
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </t>

    <t t-name="dashboard_pro_color_picker_opacity_view" owl="1">
        <input class='dashboard_pro_color_picker' t-ref="colorPicker"/>
        Transparency :
        <input type="range" t-att-value="props.value.split(',')[1]" class="color_opacity" name="db_item_opacity" min="0"
               max="0.99" step="0.01" t-on-change="onChangeCapacity"/>
    </t>

