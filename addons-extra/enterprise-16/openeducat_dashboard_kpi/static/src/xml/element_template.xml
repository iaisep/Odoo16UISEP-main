    <t t-name="add_text_element_preview" owl="1">
        <div class="dashboard_add_text_element pt-5 dashboard_element_add_text_preview" t-att-style="'background-color:'+ state.background_color + ';'">
            <div class="row">
                <div class="col-md-3 px-0">
                    <div>
                        <span t-att-style="'color:'+ state.default_icon_color_rgba_format + ';'"
                              t-att-class="'fa fa-' + state.default_icon + ' fa-5x'"/>
                    </div>
                </div>
                <div class="col-md-9 pr-0">
                    <div>
                        <h3 t-att-style="'color:'+ state.font_color + ';'">
                            <t t-esc="name"/>
                        </h3>
                    </div>
                    <t t-if="state.font_style_selection=='h3'">
                        <h3 class="dashboard_add_text_main_body" t-att-style="'color:'+ state.font_color + ';text-align:'+ state.add_text_align_field+';'">
                            <t t-esc="state.main_content"/>
                        </h3>
                    </t>
                    <t t-elif="state.font_style_selection=='h2'">
                        <h2 class="dashboard_add_text_main_body" t-att-style="'color:'+ state.font_color + ';text-align:'+state.add_text_align_field+';'">
                            <t t-esc="state.main_content"/>
                        </h2>
                    </t>
                    <t t-elif="state.font_style_selection=='h1'">
                        <h1 class="dashboard_add_text_main_body" t-att-style="'color:'+ state.font_color + ';text-align:'+state.add_text_align_field+';'">
                            <t t-esc="state.main_content"/>
                        </h1>
                    </t>
                    <t t-elif="state.font_style_selection=='p'">
                        <p class="dashboard_add_text_main_body" t-att-style="'color:'+ state.font_color + ';text-align:'+state.add_text_align_field+';'">
                            <t t-esc="state.main_content"/>
                        </p>
                    </t>
                    <t t-elif="state.font_style_selection=='custom'">
                        <p class="dashboard_add_text_main_body" t-att-style="'color:'+ state.font_color + ';font-style:'+state.add_text_italic+';font-weight:'+state.add_text_bold+';font-size:'+state.add_text_font_size+'px;text-align:'+state.add_text_align_field+';'">
                            <t t-esc="state.main_content"/>
                        </p>
                    </t>
                </div>
            </div>
        </div>
    </t>

    <t t-name="add_link_element_preview" owl="1">
