<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="plaid_transactions_wizard_view_form" model="ir.ui.view">
        <field name="name">plaid_transactions_wizard_view_form</field>
        <field name="model">plaid.transaction.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="journal_id" invisible="1"/>
                        <field name="plaid_id" options="{'no_create': True, 'no_open': True}" required="1"/>
                        <field name="plaid_line_id" attrs="{'invisible': [('plaid_id','=','False')]}"
                               options="{'no_create': True, 'no_open': True}"
                               required="1"/>
                    </group>
                    <group>
                        <field name="from_date" required="1"/>
                        <field name="to_date" required="1"/>
                    </group>
                </group>
                <footer>
                    <button name="get_transactions_from_plaid" type="object"
                            string="Generate Statements" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
