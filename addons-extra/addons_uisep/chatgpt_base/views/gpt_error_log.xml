<?xml version="1.0"?>
<odoo>

    <record id="view_gpt_error_log_tree" model="ir.ui.view">
        <field name="name">gpt.error.log.tree</field>
        <field name="model">gpt.error.log</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0">   
                <field name="create_date"/>                
                <field name="create_uid"/>    
                <field name="name"/>
                <field name="error_message"/>
                <field name="function"/>            
            </tree>
        </field>
    </record>

    <!-- Vista Form -->
    <record id="view_gpt_error_log_form" model="ir.ui.view">
        <field name="name">gpt.error.log.form</field>
        <field name="model">gpt.error.log</field>
        <field name="arch" type="xml">
            <form create="0" delete="0">                
                <sheet>
                    <group>
                        <field name="create_date"/>                
                        <field name="create_uid"/>    
                        <field name="name"/>
                        <field name="error_message"/>
                        <field name="traceback"/>
                        <field name="function"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_gpt_error_log" model="ir.actions.act_window">
        <field name="name">Registro de Errores de GPT</field>
        <field name="res_model">gpt.error.log</field>
        <field name="view_mode">tree,form</field>
        <field name="target">new</field>      
    </record>



</odoo>
