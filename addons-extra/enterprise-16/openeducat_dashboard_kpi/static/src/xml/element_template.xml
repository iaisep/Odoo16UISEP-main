    <t t-name="to_do_list_view_container" owl="1">
        <div class="container-fluid">
            <div class="row">
                <div class="card shadow col-md-9 p-0 m-0">
                    <div class="p-3 py-3 d-flex flex-row align-items-center justify-content-between ">
                        <h6 class="m-0 fw-bold h3 chart_heading" t-att-title="to_do_list_name">
                            <t t-esc="to_do_list_name"/>
                        </h6>
                    </div>
                    <div class="card-body table-responsive MaxTableContent">
                        <t t-if="state.json_todo_list_data">
                            <table id="ToDoListViewTable" class="table table-hover">
                                <thead>
                                    <tr>
                                        <t t-foreach="state.json_todo_list_data['label']" t-as="table_header" t-key="table_header">
                                            <th>
                                                <t t-esc="table_header"/>
                                            </th>
                                        </t>
                                        <th/>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="state.data_rows" t-as="table_row" t-key="table_row.data.id">
                                        <tr>
                                            <td>
                                                <input type="checkbox" id="item_info" t-att-data-model="state.json_todo_list_data['model']"/>
                                            </td>
                                            <td>
                                                <t t-esc="table_row.data.name"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </div>
                </div>
            </div>
        </div>
    </t>

