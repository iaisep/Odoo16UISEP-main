<odoo>


    <record id="view_isep_op_subject_form" model="ir.ui.view">
        <field name="name">op.isep.subject.form</field>
        <field name="inherit_id" ref="openeducat_core.view_op_subject_form"/>            
        <field name="model">op.subject</field>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group" position="after">

                <notebook>
                    <page groups="base.group_system" string="Txt generado para la IA" >

                        <field name="line_ids">
                            <tree editable="bottom" delete="0" create="0" >
                                <field name="name" />
                                <field name="is_document"/>
                                <field name="html_content" optional="hide" />
                                <field name="slide_id" optional="hide" />
                            </tree>
                        </field>
                    </page>
                </notebook>

            </xpath>


        </field>
    </record>


</odoo>
