<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Multi - Company Rules -->

    <record model="ir.rule" id="parent_multi_comp_rule">
        <field name="name">Parent multi-company</field>
        <field name="model_id" ref="openeducat_parent.model_op_parent" />
        <field name="global" eval="True" />
        <field name="domain_force">['|',('company_id','=',False),'&amp;',('company_id','in',company_ids),'|',('company_id','child_of',[user.company_id.id]),('company_id','in',user.company_ids.ids)]</field>
    </record>
</odoo>
