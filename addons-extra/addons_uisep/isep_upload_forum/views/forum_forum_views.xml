<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- View forum.forum form -->
    <record id="view_forum_forum_form" model="ir.ui.view">
        <field name="name">view.forum.forum.form</field>
        <field name="model">forum.forum</field>
        <field name="inherit_id" ref="website_forum.view_forum_forum_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='options']/group/group[@name='group_order']" position="after">
                <group>
                    <button name="open_wizard_upload_csv" string="Importar CSV" class="oe_highlight" type="object" />
                </group>
            </xpath>
        </field>
    </record>

</odoo>