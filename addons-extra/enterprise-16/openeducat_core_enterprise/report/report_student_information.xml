<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <template id="report_student_information">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <style>
                                th { text-align: left;}
                            </style>
                            <div class="text-center mb-4">
                                <h4 style="position:relative; padding-bottom:5px; width: 32%; display:inline-block; border-bottom:2px solid black;">
                                    <strong>Student Information</strong>
                                </h4>
                            </div>
                            <table class="table" style="background:#ebebeb">
                                <tr style="border-style: hidden;">
                                    <td colspan="2">
                                        <h4 class="mb-0">General Information</h4>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <table class="table table-bordered mb-0 mt-0"
                                               style="background:#fff;">
                                            <tr>
                                                <th width="30%"
                                                    style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    Name
                                                </th>
                                                <td style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    <span t-out="o.name"/>
                                                </td>
                                                <td rowspan="5">
                                                    <div class="text-center" style="background:#fff;">
                                                        <img t-if="o.image_1920" class="profile_img"
                                                             t-att-src="image_data_uri(o.image_1920)"
                                                             style="width:120px; height:120px; object-fit: cover; margin: 10px auto; "/>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th width="30%"
                                                    style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    Gender
                                                </th>
                                                <td style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    <span t-field="o.gender"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th width="30%"
                                                    style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    Birth Date
                                                </th>
                                                <td style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    <span t-out="o.birth_date" t-options="{'widget': 'date'}"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th width="30%"
                                                    style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    Age
                                                </th>
                                                <td style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    <span t-out="str(relativedelta(datetime.datetime.now().date(), o.birth_date).years) + ' Years'"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th width="30%"
                                                    style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    Blood Group
                                                </th>
                                                <td style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    <span t-field="o.blood_group"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                <tr style="border-style: hidden;">
                                    <td colspan="2">
                                        <h4 class="mb-0">Contact Information</h4>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <table class="table table-bordered mb-0 mt-0" width="100%"
                                               style="empty-cells: hide; background:#fff;">
                                            <tr>
                                                <th width="30%"
                                                    style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    Email
                                                </th>
                                                <td style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    <span t-field="o.email"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th width="30%"
                                                    style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    Mobile
                                                </th>
                                                <td style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    <span t-field="o.mobile"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th width="30%"
                                                    style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    Address
                                                </th>
                                                <td style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    <t t-if="o.street">
                                                        <span t-esc="o.street"/>,
                                                    </t>
                                                    <t t-if="o.street2">
                                                        <span t-esc="o.street2"/>
                                                    </t>
                                                    <br/>
                                                    <span t-if="o.city"/>
                                                    <span t-esc="o.city"/>,
                                                    <span t-if="o.state_id"/>
                                                    <span t-esc="o.state_id.name"/>,
                                                    <span t-if="o.zip"/>
                                                    <span t-esc="o.zip"/>
                                                    <br/>
                                                    <span t-if="o.country_id.name"/>
                                                    <span t-esc="o.country_id.name"/>
                                                </td>
                                            </tr>
                                            <t t-if="o.emergency_contact">
                                                <tr>
                                                    <th width="30%"
                                                        style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                        Emergency Contact
                                                    </th>
                                                    <td style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                        <span t-esc="o.emergency_contact.name"/>
                                                        <br/>
                                                        <t t-if="o.emergency_contact.email">
                                                            <span t-esc="o.emergency_contact.mobile"/>
                                                            <br/>
                                                        </t>
                                                        <t t-if="o.emergency_contact.mobile">
                                                            <span t-esc="o.emergency_contact.email"/>
                                                            <br/>
                                                        </t>
                                                        <t t-if="o.emergency_contact.street">
                                                            <span t-esc="o.emergency_contact.street"/>,
                                                        </t>
                                                        <t t-if="o.emergency_contact.street2">
                                                            <span t-esc="o.emergency_contact.street2"/>
                                                        </t>
                                                        <br/>
                                                        <span t-if="o.emergency_contact.city"/>
                                                        <span t-esc="o.emergency_contact.city"/>,
                                                        <span t-if="o.emergency_contact.state_id"/>
                                                        <span t-esc="o.emergency_contact.state_id.name"/>,
                                                        <span t-if="o.emergency_contact.zip"/>
                                                        <span t-esc="o.emergency_contact.zip"/>
                                                        <br/>
                                                        <span t-if="o.emergency_contact.country_id.name"/>
                                                        <span t-esc="o.emergency_contact.country_id.name"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </table>

                                    </td>
                                </tr>
                                <tr style="border-style: hidden;">
                                    <td style="border:0;">
                                        <h4 class="mb-0">Academic Information</h4>
                                    </td>
                                    <td style="border:0;">
                                        <h4 class="mb-0">Citizenship Information</h4>
                                    </td>
                                </tr>
                                <tr style="border-style: hidden;">
                                    <td>
                                        <table t-if="o.course_detail_ids" class="table table-bordered m-0" width="100%"
                                               style="empty-cells: hide; background:#fff;">
                                            <tr>
                                                <th width="30%"
                                                    style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    GR Number
                                                </th>
                                                <td style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    <span t-out="o.gr_no"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th width="30%"
                                                    style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    Course
                                                </th>
                                                <td style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    <span t-esc="o.get_course_batch_data(o.course_detail_ids)['courses']"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th width="30%"
                                                    style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    Batch
                                                </th>
                                                <td style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    <span t-esc="o.get_course_batch_data(o.course_detail_ids)['batches']"/>
                                                </td>
                                            </tr>
                                        </table>
                                        <t t-else="">
                                            <table class="table table-bordered m-0" width="100%"
                                                   style="empty-cells: hide; background:#fff;">
                                                <tr>
                                                    <th>
                                                        <span>Academic Record not Found</span>
                                                    </th>
                                                </tr>
                                            </table>
                                        </t>
                                    </td>
                                    <td class="ps-0">
                                        <table class="table table-bordered m-0" width="100%"
                                               style="empty-cells: hide; background:#fff;">
                                            <tr>
                                                <th width="30%"
                                                    style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    Nationality
                                                </th>
                                                <td style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    <span t-field="o.nationality.name"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th width="30%"
                                                    style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    Language
                                                </th>
                                                <td style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    <span t-field="o.lang"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th width="30%"
                                                    style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    Visa Info.
                                                </th>
                                                <td style="font-size: 14px; padding: 5px 10px; color: #000;">
                                                    <span t-field="o.visa_info"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>

</odoo>
