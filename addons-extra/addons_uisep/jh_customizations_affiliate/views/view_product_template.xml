<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_product_template_inherit_commission" model="ir.ui.view">
            <field name="name">product.template.form.inherit.jh_commission</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="website_sale.product_template_form_view"/>
            <field name="arch" type="xml">

                <!-- Insertamos justo después del grupo 'eCommerce Shop' -->
                <xpath expr="//group[@name='shop']" position="after">
                    <group string="Comisión por Afiliado">
                        <field name="jh_fee_product_chek"/>
                        <field name="jh_fixed_fee_percent" widget="percentage"
                               style="width: 50px"
                               attrs="{'invisible': [('jh_fee_product_chek', '=', False)],
                                       'required': [('jh_fee_product_chek', '=', True)]}"/>
                        <field name="jh_monthly_fee_product_check"/>
                        <field name="jh_monthly_fee_product"
                               widget="monetary"
                               options="{'currency_field': 'jh_currency_id'}"
                               attrs="{'invisible': [('jh_monthly_fee_product_check', '=', False)],
                                       'required': [('jh_monthly_fee_product_check', '=', True)]}"/>
                        <field name="jh_monthly_duration"
                               attrs="{'invisible': [('jh_monthly_fee_product_check', '=', False)],
                                       'required': [('jh_monthly_fee_product_check', '=', True)]}"/>
                        <field name="jh_monthly_commission"
                               attrs="{'invisible': [('jh_monthly_fee_product_check', '=', False)],
                                       'required': [('jh_monthly_fee_product_check', '=', True)]}"/>
                        <field name="jh_product_fee_percent" widget="percentage"
                               style="width: 50px"
                               attrs="{'invisible': [('jh_monthly_fee_product_check', '=', False)],
                                       'required': [('jh_monthly_fee_product_check', '=', True)]}"/>
                        <field name="jh_currency_id" invisible="1"/>
                    </group>
                </xpath>

            </field>
        </record>

    </data>
</odoo>