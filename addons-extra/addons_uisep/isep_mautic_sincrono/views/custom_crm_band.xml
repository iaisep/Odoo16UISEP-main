<odoo>
    <data>
        <record id="view_isep_mautic_sincrono_form" model="ir.ui.view">
            <field name="name">isep.mautic.sincrono.isep_multi_sincrono.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='day_close']" position="after">
                    <field name="mautic_export" force_save="1" readonly="1"/>   
                    <field name="mautic_update" force_save="1" readonly="1"/>                 
                </xpath>
                

            </field>
        </record>
    </data>
</odoo>
