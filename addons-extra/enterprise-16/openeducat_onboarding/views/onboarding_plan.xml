<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_op_boarding_tree" model="ir.ui.view">
        <field name="name">oe.onboarding.plan</field>
        <field name="model">oe.onboarding.plan</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="act_op_boarding">
        <field name="name">Onboarding Plan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">oe.onboarding.plan</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
