<odoo noupdate="1">

        <record model="ir.rule" id="assignment_multi_comp_rule">
            <field name="name">Assignment multi-company</field>
            <field name="model_id" ref="openeducat_assignment.model_op_assignment"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),'&amp;',('company_id','in',company_ids),'|',('company_id','child_of',[user.company_id.id]),('company_id','in',user.company_ids.ids)]</field>
        </record>

