<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="app_gradebook_student_form" model="ir.ui.view">
            <field name="name">app_gradebook_student_form</field>
            <field name="model">app.gradebook.student</field>
            <field name="arch" type="xml">
                <form create="0" edit="1" delete="0">
                    <header>
                        <button name="state_to_done" string="Cerrar Libreta" type="object"  class="oe_highlight"   attrs="{'invisible' : [('state', '=', 'done' )]}" />
                        <button name="state_to_in_progress" string="Volver a en proceso" type="object"  attrs="{'invisible' : [('state', '=','in_progress' )]}" /> 
                        <!-- <button name="action_draft" string="Borrador" type="object"  attrs="{'invisible' : [('state', '=', 'done' )]}" /> -->
                        
                        <field name="state" widget="statusbar" statusbar_visible="in_progress,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h2>
                                <field name="name"  />
                            </h2>
                        </div>
                        <group>
                            <group>
                                
                                <field name="student_id"  options="{'no_create':True}" readonly="1" force_save="1"/>
                                <field name="partner_id"  options="{'no_create':True}" readonly="1" force_save="1" />
                            </group>
                            <group>                                
                                <field name="course_id"  options="{'no_create':True}"  readonly="1" force_save="1" />
                                <field name="batch_id"  options="{'no_create':True}"  readonly="1" force_save="1" />
                                
                                <field name="gradebook_id" options="{'no_create':True}"  />
                                <field name="admission_id" options="{'no_create':True}" attrs="{'readonly': [('state','=','done')]}" />
                            </group>
                        </group>

                        <notebook>
                            <page string="Calificaciones" name="gradenotes">
                                <!-- <field name="gradebook_subject_ids" attrs="{'readonly': [('state','=','done')]}" /> -->
                                <field name="gradebook_subject_ids" mode="tree,form" >
                                    <tree string="lines_gradebook" attrs="{'readonly': [('state','in',('done','in_progress'))]}" delete="0" create="1" edit="1">
                                        <field name="name"/>
                                        <field name="point_average_assignment"/>
                                        <field name="point_average_exam"/>
                                        <field name="point_average_interaction"/>
                                        <field name="point_average_foro"/>
                                        <field name="final_subject_note"/>                                        
                                        <button name="unlink_subject" string="" type="object" class="btn-danger" icon="fa-trash" attrs="{'invisible': [('state', 'in', ('done','draft'))]}"/>
                                        <field name="state" invisible="1" />
                                    </tree>
                                    <form create="0" edit="1" delete="0">
                                        <header>                      
                                            <field name="state" widget="statusbar" statusbar_visible="in_progress,done"/>
                                        </header>

                                        <field name="show_assignment" invisible="1"/>   
                                        <field name="show_exam" invisible="1"/>   
                                        <field name="show_interaction" invisible="1"/>   
                                        <field name="show_foro" invisible="1"/>   

                                        <field name="admission_id" invisible="1"/>       
                                        <field name="course_id" invisible="1"/>
                                        <field name="gradebook_student_id" invisible="1"/>

                                        <sheet>
                                            <div class="oe_title">
                                                <h2>
                                                    <field name="name"/>
                                                    
                                                </h2>
                                            </div>
                                            <group>
                                                <group>
                                                    <field name="op_subject_id"  attrs="{'readonly': [('state','=','done')]}"  required="1" options="{'no_open': True,'no_create':True}"/>
                                                    <field name="final_subject_note"/>
                                                </group>
                                                <group>   

                                                    <label for="point_average_assignment" attrs="{'invisible': [('show_assignment','=', False )]}" />
                                                    <div name="point_average_assignment_div" class="d-flex"  attrs="{'invisible': [('show_assignment','=', False )]}" >
                                                        <field name="point_average_assignment" class="oe_inline mx-3" />
                                                        <span class="oe_inline o_form_label mx-3">=> </span>
                                                        <field name="info_assignment" />
                                                    </div>

                                                    <label for="point_average_exam"  attrs="{'invisible': [('show_exam','=', False )]}" />
                                                    <div name="point_average_exam_div" class="d-flex"  attrs="{'invisible': [('show_exam','=', False )]}" >
                                                        <field name="point_average_exam" class="oe_inline mx-3" />
                                                        <span class="oe_inline o_form_label mx-3" >=> </span>
                                                        <field name="info_exam" />
                                                    </div>

                                                    <label for="point_average_interaction" attrs="{'invisible': [('show_interaction','=', False )]}" />
                                                    <div name="point_average_interaction_div" class="d-flex" attrs="{'invisible': [('show_interaction','=', False )]}" >
                                                        <field name="point_average_interaction" class="oe_inline mx-3" />
                                                        <span class="oe_inline o_form_label mx-3" >=> </span>
                                                        <field name="info_interaction" />
                                                    </div>

                                                    <label for="point_average_foro" attrs="{'invisible': [('show_foro','=', False )]}" />
                                                    <div name="point_average_foro_div" class="d-flex"  attrs="{'invisible': [('show_foro','=', False )]}">
                                                        <field name="point_average_foro" class="oe_inline mx-3" />
                                                        <span class="oe_inline o_form_label mx-3" >=> </span>
                                                        <field name="info_foro" />
                                                    </div>


                    
                                                </group>
                                            </group>
                                            <notebook>
                                                <page string="Evaluaciones" name="exams">
                                                    <field name="gradebook_result_ids"  attrs="{'readonly': [('state','=','done')]}"  context="{'default_admission_id': admission_id }" >
                                                        <tree editable="bottom" delete="0">
                                                            <field name="survey_type" optional="show" required="1"/>
                                                            <field name="description"/>                                       
                                                            <field name="name" optional="hide" readonly="0" force_save="1"/>
                                                            <field name="scoring_total"/>
                                                            <field name="post_qty" attrs="{'invisible':[('survey_type','!=','foro')] }" />
                                                            
                                                            <field name="comment"  optional="hide" />
                                                            <field name="channel_id" optional="hide" options="{'no_open': True, 'no_create':True}"/>
                                                            <field name="channel_partner_id" optional="hide" options="{'no_open': True, 'no_create':True}"/>
                                                            <field name="survey_user_input_id" optional="hide" options="{'no_open': True, 'no_create':True}"/>
                                                            <field name="gradebook_subject_id"  optional="hide" />
                                                            <button name="unlink" confirm="Eliminar?" title="Remove" icon="fa-times" type="object"/>
                                                        </tree>
                                                    </field>
                                                </page>

                                                <page string="Opciones" name="exams">
                                                    <group>   
                                                        <group>                             
                                                            <field name="gradebook_id"  attrs="{'readonly': [('state','=','done')]}"  options="{'no_create':True}"  />
                                                        </group>
                                                        <group>
                                                        </group>

                                                    </group>
                                                </page>

                                            </notebook>
                                        </sheet>
                                    </form>
                                </field>
                                <group name="average_final" col="6">
                                    <group class="oe_subtotal_footer oe_right" colspan="2" name="note_total">
                                        <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                            <label for="total_final" />
                                        </div>
                                        <field name="total_final" nolabel="1" class="oe_subtotal_footer_separator"/>
                                    </group>
                                    <div class="oe_clear"/>
                                </group>

                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="app_gradebook_student_tree" model="ir.ui.view">
            <field name="name">app_gradebook_student_tree</field>
            <field name="model">app.gradebook.student</field>
            <field name="arch" type="xml">
                <tree create="1" edit="0">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="partner_id"/>
                    <field name="admission_id"/>
                    <field name="course_id"/>
                    <field name="batch_id"/>

                </tree>
            </field>
        </record>


        <record id="app_gradebook_student_search" model="ir.ui.view">
            <field name="name">app_gradebook_student_search</field>
            <field name="model">app.gradebook.student</field>
            <field name="arch" type="xml">
                <search string="Libretas">
                    <field name="partner_id" string="Alumno" filter_domain="['|', ('partner_id', 'ilike', self), ('student_id', 'ilike', self)]"/>
                    <field name="batch_id"  string="Grupo"  />
                    <field name="admission_id" string="Nr. Admisión" />
                    <field name="course_id" string="Curso" />

                    <filter  name="state_in_progress" string="En proceso" domain="[ ('state', '=', 'in_progress')]" />
                    <filter  name="state_done" string="Finalizado" domain="[ ('state', '=', 'done')]" />
                                        
                    <group expand="0" string="Group By">
                        <filter name="group_course_id" string="Curso" domain="[]" context="{'group_by': 'course_id'}"/>
                        <filter name="group_batch_id" string="Grupo" domain="[]" context="{'group_by': 'batch_id'}"/>
                    </group>
                    <searchpanel>
                        <field name="state"    string="Estado" icon="fa-building" enable_counters="1"/>
                        <field name="batch_id"  string="Grupo" icon="fa-users" enable_counters="1"  />
                    </searchpanel>
                </search>
            </field>
        </record>


        <record id="act_app_gradebook_student_view" model="ir.actions.act_window">
            <field name="name">Libretas</field>
            <field name="res_model">app.gradebook.student</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="context">{'search_default_state_in_progress': 1}</field>
        </record>




    </data>
</odoo>


 

