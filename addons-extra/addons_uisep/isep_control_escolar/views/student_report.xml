<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="student_report_view_tree" model="ir.ui.view">
        <field name="name">student.report.view.tree</field>
        <field name="model">student.report</field>
        <field name="arch" type="xml">
            <tree string="Anexo 8" edit="false" editable="top" create="false">
                <field name="admission_status"/>
                <field name="scholar_year" />
                <field name="first_name" />
                <field name="middle_name" />
                <field name="last_name" />
                <field name="gender" />
                <field name="curp" />
                <field name="date" />
                <field name="nationality" />
                <field name="lang" />
                <field name="special_needs" />
                <field name="academic_background" />
                <field name="cct" />
                <field name="application_number" />
                <field name="education_level" />
                <field name="institute_key" />
                <field name="career_key" />
                <field name="shift_type" />
                <field name="rvoe_number" />
                <field name="rvoe_date" />
                <field name="educational_mod" />
            </tree>
        </field>
    </record>

    <record id="view_student_report_search" model="ir.ui.view">
        <field name="name">student.report.search</field>
        <field name="model">student.report</field>
        <field name="arch" type="xml">
            <search string="Student Analysis">
                <field name="date"/>
                <separator/>
                <field name="student_id"/>
                <field name="partner_id"/>
                <field name="user_id"/>
            </search>
        </field>
    </record>


    <record id="action_student_report_all" model="ir.actions.act_window">
        <field name="name">Anexo 8</field>
        <field name="res_model">student.report</field>
        <field name="view_mode">tree</field>
        <field name="view_id"></field>  <!-- force empty -->
        <field name="search_view_id" ref="view_student_report_search"/> 
        <field name="context">{'group_by':[]}</field>
    </record>

        <menuitem id="menu_student_report"
            name="Control Escolar Anexo 8"
            action="action_student_report_all"
            parent="openeducat_admission.menu_admission_report_root" 
            sequence="40"/>

</odoo>
