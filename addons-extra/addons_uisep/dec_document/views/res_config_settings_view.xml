<?xml version="1.0" encoding="UTF-8" ?>
<odoo>


<record id="res_config_settings_view_form_dec" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.dec_doc</field>
      <field name="model">res.config.settings</field>
      <field name="priority" eval="10"/>
      <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
      <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="after">
                <div id="DEC">
                        <h2>Responsable Certificados DEC (SEP-XML)</h2>
                        <div class="row mt16 o_settings_container" id="dec_certificates">
				<div class="col-12 col-lg-6 o_setting_box" title="Certificados DEC">
				    <div class="o_setting_left_pane"/>
				    <div class="o_setting_right_pane">
				        <span class="o_form_label">Responsable DEC</span>
				        <div class="text-muted">
						Configure the responsible on DEC certificates.
					</div>
					<div class="row mt16">
                                             <field name="dec_responsable_id"/>
					</div>
				    </div>
				</div>
		       </div>
	        </div>
            </xpath>
      </field>
  </record>


</odoo>
