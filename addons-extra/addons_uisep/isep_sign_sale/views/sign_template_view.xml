<?xml version="1.0" encoding="utf-8" ?>
<odoo>
      
    <record id="lic_view_sign_template_form_view" model="ir.ui.view">
        <field name="name">sign.template</field>
        <field name="model">sign.template</field>
        <field name="inherit_id" ref="sign.sign_template_view_form"/>  
        <field name="arch" type="xml">
            <xpath expr="//div/button[@name='open_requests']" position="before">
                <button name="%(sign.action_sign_send_request)d" type="action" class="btn btn-primary btn-sm mt8" context="{'sign_directly_without_mail': 0}" icon="fa-regular fa-paper-plane">Send</button>
                <button name="%(sign.action_sign_send_request)d" type="action" class="btn btn-primary btn-sm mt8" context="{'sign_directly_without_mail': 1}" icon="fa-brands fa-xing">Sign Now</button>
                <button name="open_shared_sign_request" type="object" class="btn btn-secondary btn-sm mt8" attrs="{'invisible': ['|', ('active', '=', False), ('responsible_count', '&gt;', 1)]}" icon="fa-solid fa-share">Share</button>
            </xpath>
        </field>
    </record>

</odoo>

