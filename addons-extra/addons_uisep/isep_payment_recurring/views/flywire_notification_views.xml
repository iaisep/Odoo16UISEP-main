<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View flywire_notification View Tree -->
    <record id="view_flywire_notification_tree" model="ir.ui.view">
        <field name="name">view.flywire_notification.tree</field>
        <field name="model">flywire.notification</field>
        <field name="arch" type="xml">
            <tree>
                <field name="payment_id"/>
                <field name="amount_from"/>
                <field name="currency_from"/>
                <field name="amount_to"/>
                <field name="currency_to"/>
                <field name="status"/>
                <field name="expiration_date"/>
                <field name="external_reference"/>
                <field name="student_id"/>
                <field name="card_type"/>
                <field name="card_brand"/>
            </tree>
        </field>
    </record>

    <!-- View flywire_notification form -->
    <record id="view_flywire_notification_form" model="ir.ui.view">
        <field name="name">view.flywire_notification.form</field>
        <field name="model">flywire.notification</field>
        <field name="arch" type="xml">
            <form string="Flywire_notification">
                <sheet>
                    <group>
                        <field name="payment_id"/>
                        <field name="amount_from"/>
                        <field name="currency_from"/>
                        <field name="amount_to"/>
                        <field name="currency_to"/>
                        <field name="status"/>
                        <field name="expiration_date"/>
                        <field name="external_reference"/>
                        <field name="student_id"/>
                        <field name="card_type"/>
                        <field name="card_brand"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>



    <!-- Action flywire_notification -->
    <record id="action_flywire_notification" model="ir.actions.act_window">
        <field name="name">Flywire_notification</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">flywire.notification</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Flywire_notification.
            </p>
        </field>
    </record>

    <menuitem id="notification_flywire_menu"
              name="Notification Flywire"
              action="action_flywire_notification"
              sequence="15"
              parent="account.root_payment_menu"/>

</odoo>
