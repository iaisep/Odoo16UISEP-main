<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sep_report_view_tree" model="ir.ui.view">
        <field name="name">sep.report.view.tree</field>
        <field name="model">sep.report</field>
        <field name="arch" type="xml">
            <tree string="Anexo 9" edit="false" editable="top" create="false">
                <field name="admission_status"/>
                <field name="academic_year" />
                <field name="curp" />
                <field name="avg_score" />
                <field name="certificate_type" />
                <field name="expedition_date" />
                <field name="document_no" />
            </tree>
        </field>
    </record>

    <record id="view_sep_report_search" model="ir.ui.view">
        <field name="name">sep.report.search</field>
        <field name="model">sep.report</field>
        <field name="arch" type="xml">
            <search string="Sep Report">
                <field name="student_id"/>
            </search>
        </field>
    </record>


    <record id="action_sep_report" model="ir.actions.act_window">
        <field name="name">Anexo 9</field>
        <field name="res_model">sep.report</field>
        <field name="view_mode">tree</field>
        <field name="view_id"></field>  <!-- force empty -->
        <field name="search_view_id" ref="view_sep_report_search"/> 
        <field name="context">{'group_by':[]}</field>
    </record>

        <menuitem id="menu_sep_report"
            name="Control Escolar Anexo 9"
            action="action_sep_report"
            parent="openeducat_admission.menu_admission_report_root" 
            sequence="50"/>


</odoo>
