<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_inherit_schedule" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale_info_group']/field[@name='user_id']" position="before" >
                <field name="order_subscription_id" />
                <field name="schedule_id" domain="[('order_id','=',order_subscription_id)]" />
            </xpath>
        </field>
    </record>


    <record id="view_move_tree_inherit_schedule" model="ir.ui.view">
        <field name="name">account.move.view.tree.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_origin']" position="after" >
                <field name="order_subscription_id" optional="hide" />
                <field name="schedule_id"  optional="hide" />
            </xpath>
        </field>
    </record>

</odoo>
