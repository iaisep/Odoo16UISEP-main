<?xml version="1.0"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="folder_view_form">
            <field name="name">portal.documents.folders form</field>
            <field name="model">portal.documents.folders</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_see_attachments" type="object" class="oe_stat_button" icon="fa-file-text-o" attrs="{'invisible' : [('attachment_count', '=', 0)]}" groups="isep_documents_portal.group_document_manager">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="attachment_count"/>
                                    </span>
                                    <span class="o_stat_text">Documents</span>
                                </div>
                            </button>
                        </div>
                        <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image&quot;, &quot;size&quot;: [90, 90]}"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="E.g. Finance"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                             </group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Documents">
                                <field name="attachment_ids" context="{'default_public': True}" >
                                    <tree string="Documents"  editable="button" >
                                        <field name="type" required="1" />
                                        <field name="name" required="1" />
                                        <field name="description" required="1" />
                                        <field name="datas" string="Adjunto"   attrs="{'required':[('type','=','binary')],'invisible':[('type','=','url')]}"/>
                                        <field name="url" widget="url" attrs="{'required':[('type','=','url')],'invisible':[('type','=','binary')]}"/>      
                                        <field name="create_uid" />
                                        <field name="public" invisible="1" />
                                        <field name="create_date" optional="hide" />
                                        
                                    </tree>
                                </field>
                            </page>
                            
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="folder_view_kanban" model="ir.ui.view">
            <field name="name">portal.documents.folders kanban</field>
            <field name="model">portal.documents.folders</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" archivable="false">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="image"/>
                    <field name="model_id"/>
                    <field name="attachment_count"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <t t-if="record.image.raw_value">
                                        <img t-att-src="kanban_image('portal.documents.folders', 'image', record.id.raw_value)" alt="Folder"/>
                                    </t>
                                    <t t-if="!record.image.raw_value">
                                        <img src="/isep_documents_portal/static/src/img/folder.png" class="o_kanban_image" alt="Folder"/>
                                    </t>
                                </div>
                               <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings mt4">
                                            <strong class="o_kanban_record_title"><span><t t-esc="record.name.value"/></span></strong>
                                        </div>
                                        <span class="badge" t-if="record.attachment_count.value>0">
                                            <i class="fa fa-fw fa-file"/>
                                            <t t-esc="record.attachment_count.value"/>
                                        </span>
                                       
                                    </div>
                                     <div class="o_kanban_record_subtitle">
                                        <t t-if="record.model_id and record.model_id.raw_value"> 
                                            <ul>
                                                <li>Model: <field name="model_id"/></li>
                                            </ul>                                                                                     
                                        </t>
                                        
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="folder_view_tree" model="ir.ui.view">
            <field name="name">portal.documents.folders tree</field>
            <field name="model">portal.documents.folders</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="display_name" string="Folders"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="model_id"/>
                </tree>
            </field>
        </record>

        <record id="folder_view_search" model="ir.ui.view">
            <field name="name">portal.documents.folders search</field>
            <field name="model">portal.documents.folders</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="model_id"/>
                </search>
            </field>
        </record>

        <record id="folder_action" model="ir.actions.act_window">
            <field name="name">Folders</field>
            <field name="res_model">portal.documents.folders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('isep_documents_portal.folder_view_kanban')}),
            (0, 0, {'view_mode': 'form', 'view_id': False})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create new Document Folder
                </p>
            </field>
        </record>

       
    </data>
</odoo>
