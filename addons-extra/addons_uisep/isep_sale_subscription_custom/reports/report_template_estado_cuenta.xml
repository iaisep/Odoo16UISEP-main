<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    

    <template id="report_estado_cuenta">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                <div class="watermark" style="position: absolute; opacity:1.0; width:100%; height:100%; text-align:center; z-index:-1; margin: 0px; ">
                    <img class="border border-light" style="margin: 0px !important; width: 100%;" t-att-src="'/isep_sale_subscription_custom/static/src/img/background.png'"/>  
                </div>
                <div class="page" style="width:100%; height:100%; padding-left: 100px; padding-right: 100px;">
                    <h2 style="text-align:center; margin-bottom: 20px; padding-top: 50px;">ESTADO DE CUENTA</h2>
                    <div style="margin-bottom: 20px;margin-left: 155px;">
                        <strong>Nombre del Cliente:</strong> <span t-esc="o.partner_id.name"/>
                        <br/>
                        <strong>Numero de Suscripcion:</strong> <span t-esc="o.name"/>
                        <br/>
                        <strong>Fecha de Inicio:</strong> <span t-esc="o.start_date"/>
                        <br/>
                        <strong>Numero Total de Pagos:</strong> <span t-esc="o.term_number"/>
                        <br/>
                        <strong>Monto Total del Contrato:</strong> <span t-esc="o.amount_recurring_taxinc * (o.term_number or 1)"/> <span t-esc="o.currency_id.name"/>
                        <br/>
                        <strong>Monto por Pago:</strong> <span t-esc="o.amount_recurring_taxinc"/> <span t-esc="o.currency_id.name"/>
                        <!-- <br/>
                        <strong>Fecha de Emision del Estado:</strong> <span t-esc="o.date_order"/> -->
                    </div>
                    
                    <t t-set="es_largo" t-value="len(o.subscription_schedule) > 20"/>

                    <div t-attf-style="
                        #{'transform: scale(0.75); transform-origin: top left; width: 100%;' if es_largo else ''}
                    ">

                        <table class="table table-sm"
                            t-attf-style="width:100%; border-collapse: collapse; margin-bottom: 20px; font-size: #{'8px' if es_largo else '11px'};">
                            <thead>
                                <tr style="background:#eee;">
                                    <th style="border:1px solid #888; padding:4px;">No. de Pago</th>
                                    <th style="border:1px solid #888; padding:4px;">Fecha Programada</th>
                                    <th style="border:1px solid #888; padding:4px;">Monto</th>
                                    <th style="border:1px solid #888; padding:4px;">Moneda</th>                                                                        
                                    <th style="border:1px solid #888; padding:4px;">Estado del Pago</th>
                                    <th style="border:1px solid #888; padding:4px;">Fecha pago</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.subscription_schedule" t-as="pago">
                                    <td style="border:1px solid #888; padding:4px;" t-esc="pago.term_label"/>
                                    <td style="border:1px solid #888; padding:4px;" t-esc="pago.date_due"/>
                                    <td style="border:1px solid #888; padding:4px;" t-esc="pago.amount_recurring_taxinc"/>
                                    <td style="border:1px solid #888; padding:4px;" t-esc="pago.currency_id.name"/>
                                    <td style="border:1px solid #888; padding:4px;">
                                        <t t-set="today" t-value="datetime.datetime.now().date()"/>
                                        <t t-set="is_past_due" t-value="pago.date_due and today and pago.date_due &lt; today"/>
                                        
                                        <span t-if="pago.payment_state == 'paid'">
                                            <span style="font-weight:bold; color: #28a745;">Pagado</span>
                                        </span>
                                        <span t-if="pago.payment_state == 'partial'">
                                            <span t-if="is_past_due">
                                                <span style="font-weight:bold; color: #a52a2a;">Parcial Vencido</span>
                                            </span>
                                            <span t-else="">
                                                <span style="font-weight:bold; color:rgb(199, 202, 28);">Parcial Pagado</span>
                                            </span>
                                        </span>
                                        <span t-if="pago.payment_state == 'not_paid'">
                                            <span t-if="is_past_due">
                                                <span style="font-weight:bold; color: #a52a2a;">Vencido</span>
                                            </span>
                                            <span t-else="">
                                                <span style="font-weight:bold; color: #dc3545;">Pendiente</span>
                                            </span>
                                        </span>
                                    </td>
                                    <td style="border:1px solid #888; padding:4px;">
                                        <t t-if="pago.invoice_ids">
                                            <t t-set="payments_widget" t-value="pago.invoice_ids[0].invoice_payments_widget or {}"/>
                                            <t t-set="first_payment" t-value="payments_widget.get('content') and payments_widget['content'][0] or {}"/>
                                            <t t-esc="first_payment.get('date', '')"/>
                                        </t>
                                        <t t-else="-"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                    <div style="position: relative; margin-bottom: 0px;">
                        <div style="margin-bottom: 10px; width: 60%;">
                            <strong>Saldo Total:</strong> <span t-esc="o.amount_recurring_taxinc * (o.term_number or 1)"/> <span t-esc="o.currency_id.name"/>
                            <br/>
                            <strong>Total Pagado:</strong> <span t-esc="sum((pago.amount_recurring_taxinc or 0) for pago in o.subscription_schedule if pago.payment_state == 'paid')"/> <span t-esc="o.currency_id.name"/>
                            <br/>
                            <strong>Saldo Pendiente:</strong> <span t-esc="(o.amount_recurring_taxinc * (o.term_number or 1))-(sum((pago.amount_recurring_taxinc or 0) for pago in o.subscription_schedule if pago.payment_state == 'paid'))"/> <span t-esc="o.currency_id.name"/>
                        </div>
                        <!-- SecciÃ³n para la firma -->
                        <div style="position: absolute; top: 0; right: 0; text-align: center; width: 30%;">
                            <div style="display: inline-block; text-align: center;">
                                <!-- Imagen de la firma -->
                                <img t-att-src="'/isep_sale_subscription_custom/static/src/img/firma_ramon.png'" 
                                    style="height: 55px; margin-bottom: 10px;"/>
                                <div style="margin-top: 5px;">
                                    <span style="font-size: 12px;"><p>Ramon Niebla</p></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        <strong>Observaciones:</strong>
                        <ul style="margin-top: 5px;">
                            <li t-esc="o.note"/>
                        </ul>
                    </div>
                </div>
            </t>
        </t>
    </template>
    </data>

</odoo>
