<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_report_down_adminsion" model="ir.actions.report">
            <field name="name">Carta de baja estudiante</field>
            <field name="model">admission.downconsult</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">isep_elearning_custom.action_report_down_student_id</field>
            <field name="report_file">isep_elearning_custom.action_report_down_student_id</field>
            <field name="binding_model_id" ref="model_admission_downconsult"/>
            <field name="binding_type">report</field>
            <field name="print_report_name">(object.partner_id.name)</field>
        </record>

        <record id="paperformat_down_admision" model="report.paperformat">
            <field name="name">Formato Carta de baja Estudiante</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_width">216</field> 
            <field name="page_height">279</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
            <field name="report_ids" eval="[(4, ref('action_report_down_adminsion'))]"/>
        </record>
    </data>
</odoo>