<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_view_op_course_type_form_tag" model="ir.ui.view">
            <field name="name">inherit_view_op_course_type_form_tag</field>
            <field name="model">op.course.type</field>
            <field name="inherit_id" ref="isep_student_migration.op_course_type_view_form"/>
            <field name="arch" type="xml">        
                <xpath expr="//field[@name='code']" position="after">
                    <field name="tag_crm_id" options="{'no_quick_create': True,'no_create_edit': True}"  />
                    <field name="tag_crm_id_confirm" options="{'no_quick_create': True,'no_create_edit': True}"  />
                </xpath>          
            </field>
        </record>

        <record id="inherit_view_op_area_course_form_tag" model="ir.ui.view">
            <field name="name">inherit_view_op_area_course_form_tag</field>
            <field name="model">op.area.course</field>
            <field name="inherit_id" ref="isep_student_migration.op_area_course_view_form"/>
            <field name="arch" type="xml">        
                <xpath expr="//field[@name='code']" position="after">
                    <field name="tag_crm_id" options="{'no_quick_create': True,'no_create_edit': True}"  />
                    <field name="tag_crm_id_confirm" options="{'no_quick_create': True,'no_create_edit': True}"  />
                </xpath>          
            </field>
        </record>        
    </data>
</odoo>