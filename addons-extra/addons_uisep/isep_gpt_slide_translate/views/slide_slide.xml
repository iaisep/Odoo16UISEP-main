<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_slide_slide_translate_tree_2_inherit" model="ir.ui.view">
        <field name="name">slide.slide.translate.tree.inherit</field>
        <field name="model">slide.slide</field>
        <field name="inherit_id" ref="website_slides.slide_slide_view_tree_report" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='completion_time']" position="after">
                <field name="slide_category" invisible="1" /> 
                <button name="action_open_translation_wizard" attrs="{'invisible':[('slide_category', '!=', 'article')]}"  type="object" icon="fa-language" string=" Traducir" class="btn-link mb-1 px-0" />
            </xpath>
        </field>
    </record>

    <record id="view_slide_slide_translate_tree_1_inherit" model="ir.ui.view">
