<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="op_student_form_inh" model="ir.ui.view">
        <field name="name">op_student_form_inh</field>
        <field name="model">op.student</field>
        <field name="inherit_id"  ref="openeducat_core.view_op_student_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="official_detail" string="Detalle Oficialidad">
                                <group>
                                    <group>
                                        <field name="annex_9"/>
                                        <field name="certificate_type" attrs="{'invisible':[('annex_9','=',False)], 'required':[('annex_9','=',True)]}" />
                                    </group>
                                </group>
                            </page>

            </xpath>
        </field>
    </record>


</odoo>
