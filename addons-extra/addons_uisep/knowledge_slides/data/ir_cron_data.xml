<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_knowledge_content_sync" model="ir.cron">
            <field name="name">Knowledge Content Sync</field>
            <field name="model_id" ref="website_slides.model_slide_channel"/>
            <field name="state">code</field>
            <field name="code">model.sync_slide_to_knowledge(1000)</field>
            <field name="interval_type">days</field>
            <field name="interval_number">1</field>
            <field name="numbercall">-1</field>
            <field name="doall">False</field>
            <field name="active">True</field>
            <field name="nextcall" eval="(datetime.now() + timedelta(days=1)).replace(hour=6, minute=0, second=0)"/>
            <field name="user_id" ref="base.user_root"/>
        </record>
    </data>
</odoo>