<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1" >

        <record id="paperformat_certificado2" model="report.paperformat">
	    <field name="name">Letter Certificado2</field>
	    <field name="margin_top">0</field>     <!-- No top margin -->
	    <field name="margin_bottom">0</field>  <!-- No bottom margin -->
	    <field name="margin_left">0</field>    <!-- No left margin -->
	    <field name="margin_right">0</field>   <!-- No right margin -->
	    <field name="header_line" eval="False"/>  <!-- No header line -->
	    <field name="header_spacing">0</field>    <!-- No header spacing -->
	    <field name="dpi">90</field>  <!-- DPI settings can be adjusted if needed -->
	    <field name="orientation">Portrait</field>  <!-- Portrait orientation -->
	    <field name="format">Letter</field>
	    <field name="default" eval="True"/>
        </record>

        <!-- QWeb Reports -->
        <record id="r_certificado2" model="ir.actions.report">
            <field name="certificado_web" eval="True"/>
            <field name="name">Certificado 2</field>
            <field name="model">op.student</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">isep_openeducat_reports.t_certificado2</field>
            <field name="report_file">isep_openeducat_reports.t_certificado2</field>
            <field name="binding_model_id" eval="False"/> 
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="isep_openeducat_reports.paperformat_certificado2"/>
            <field name="attachment">(object.name or 'Certificado2').replace('/','_')+'.pdf'</field>
        </record>

        <template id="t_certificado2">
                       <t t-set="students" t-value="docs or env[doc_model].sudo().browse(student_ids)"/>
		       <t t-foreach="students" t-as="o">
			   <t t-call="isep_openeducat_reports.t_certificado2_document" t-lang="o.partner_id.lang"/>
		       </t>
        </template>


        <template id="t_certificado2_document">
            <t t-call="web.basic_layout">
                       <t t-set="libreta" t-value="env['app.gradebook.student'].sudo().search([('student_id','=',o.id),('batch_id','=',batch_id)])"/>
                       <t t-set="admission" t-value="libreta.admission_id"/>

                       <t t-set="subscription" t-value="o.get_subscription_data()"/>
                       <t t-set="currency_id" t-value="subscription.get('currency_id',False)"/>
                       <t t-set="currency_name" t-value="currency_id.currency_unit_label"/>
                       <t t-set="detalles" t-value="{'Nombre del programa': admission.course_id.display_name,'Valor total del programa': '$ %.2f %s' %(subscription.get('t_amount_total',99999), currency_name),'Costo de inscripción': '$ %.2f %s' %(subscription.get('t_amount_no_recurring_taxinc',99999), currency_name), '3 Mensualidades': '$ %.2f %s cada una '%(subscription.get('t_amount_recurring_taxinc',99999), currency_name)}"/>
                      <t t-if="o and libreta and admission">
                       <t t-set="data_to_stamp" t-value="{'Fecha':today_string,'Estudiante':o.display_name,'Documento':'Certificado de inscripción y detalles del programa' , 'Carrera':admission.course_id.display_name, 'Libreta':libreta.display_name, 'Admision':admission.display_name}"/>
                       <!-- <t t-set="data_to_stamp" t-value="data_to_stamp | detalles"/> -->
                       <t t-set="data_to_stamp" t-value="dict(data_to_stamp, **detalles)"/>
                       <t t-set="dict_stamp" t-value="env['op.sign_certificate'].sudo().stamp_data(data_to_stamp, o)"/>

                        <div class="watermark" style="position: absolute; opacity:1.0; width:100%; height:100%; text-align:center; z-index:-1; margin: 0px; ">

                            <img class="border border-light" style="margin: 0px !important; width: 100%;" t-att-src="'/isep_openeducat_reports/static/src/img/background.png'"/>  
                         </div> 


                        <div class="page" style="width:100%; height:100%; padding-left: 100px; padding-right: 100px;">


                                <div class="row" style="text-align:right; padding-top:250px;">    
					<div class="col-12">
					    <p style='font-size:20px;'>México, a <span t-out="today_string"/> </p>
                                        </div>
                                        
                                </div>
                                 <div class="row" style="text-align:center; padding-top:100px;">    
					<div class="col-12">
					    <p style='font-size:30px;'><strong>Certificado de inscripción y detalles del programa</strong></p>
                                        </div>
                                        
                                </div> 

                                <div class="row mt-4" style="text-align:justify;">     
					<div class="col-12">
					    <p style='font-size:20px;'>A quien corresponda: </p>
					    <p style='font-size:20px;'>El departamento de Orientación Universitaria, por medio del presente certificado hace constar que <span t-out="'la alumna ' if o.gender == 'f' else 'el alumno '"/>
					    <strong t-out="o.name"/> se encuentra actualmente cursando la <strong t-out="admission.course_id.display_name"/> en la Universidad ISEP.</p>
					</div>
                                </div>
				    <table class="table table-borderless table-striped mt-1 p-0" style="font-size:20px;">
					<thead>
						<tr>
						    <td><strong>Detalle del Programa</strong></td>
						</tr>
						
					</thead>
					<tbody>
                                                
					    <t t-foreach="detalles.keys()" t-as="detalle_key">

						<tr>
						    <td><strong t-out="'%s: %s' %(detalle_key, detalles[detalle_key] )"/></td>
						</tr>
					    </t>

					</tbody>
				    </table>

                                <div class="row mt-4" style="text-align:justify;">
                                    <div class="col-12">
					    <p style='font-size:20px;'>
					    Este certificado se expide a solicitud <span t-out="'de la interesada ' if o.gender == 'f' else 'del interesado '"/> para los fines que estime conveniente.</p>
					    <p style='font-size:20px;'>
					    Se extiende el presente certificado en México, el día <span t-out="today_string"/></p>
                                    </div>
                                </div>


                            <div class="row" style="text-align:center; padding-top: 50px;">

                                   <div class="col-4">
	<img alt="Barcode" style="position: relative; left: -25px;" t-att-src="'/report/barcode/?barcode_type=QR&amp;value=%s&amp;width=180&amp;height=180' % quote_plus('%s/verificar_documento?'%(base_url) + keep_query(stamp=dict_stamp.get('stamp',''), certificate_id = dict_stamp.get('certificate_id', 0), data_str = dict_stamp.get('data_str', '')))"/>
          
                                </div>
                                                              <div class="col-8">
        


					<div class="row" style="font-size: 20px;">
					    <div class="col-4"/>
					    <div class="col-8">
						    <p>
						    <strong>ATENTAMENTE</strong></p>
					    </div>
					</div>
					<div class="row" style="font-size:16px;">
					    <div class="col-12">

                                        <img src="/isep_openeducat_reports/static/src/img/firma_decana_isep.png" style="width:132px; height:81px;"/> 
                                        <img src="/isep_openeducat_reports/static/src/img/sello_isep.png" style="width:82px; height:48px;"/> 

						<br></br>
						<strong >Dra. B. Nayeli Pérez Tamayo</strong>
                        <br></br>
                        <strong >Vicerrectora Académica</strong>
					    </div>
					</div>
				 </div>
		              </div>

                          </div>  <!-- fin de page-->
                      </t> <!--fin de if libreta etc -->
             </t>
        </template>
    </data>
</odoo>
