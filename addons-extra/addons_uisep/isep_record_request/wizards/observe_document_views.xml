<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="observe_document_wizard_view_form" model="ir.ui.view">
        <field name="name">observe.document.wizard.view.form</field>
        <field name="model">observe.document.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h3 class="text-danger">
                        IMPORTANTE:
                        <br/>
                        Agregar la razón por la cual está observando este documento.
                    </h3>
                    <field name="comment" placeholder="Comentario"/>
                </sheet>
                <footer>
                    <button name="add_comment" string="Aceptar" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>