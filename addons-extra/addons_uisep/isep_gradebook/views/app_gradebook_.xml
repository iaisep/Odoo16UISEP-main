<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <record id="app_gradebook_form" model="ir.ui.view">
            <field name="name">app_gradebook_form</field>
            <field name="model">app.gradebook</field>
            <field name="arch" type="xml">
                <form create="0" edit="0" delete="0">
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="admission_id" invisible="1" />
                                <field name="admission_name_id"  readonly="1" />  
                                <field name="batch_id"/> 
                                <field name="course_id"/>    
                                <field name="subject_id"/>
                            </group>
                            <group>
                                <field name="marks"/>
                                <field name="review_id"/>
                                <field name="faculty_id"/> 
                                <field name="type"/>
                                <field name="active"/>
                            </group>
                        </group>
                       
                    </sheet>

                </form>
            </field>
        </record>

        <record id="app_gradebook_tree" model="ir.ui.view">
            <field name="name">app_gradebook_tree</field>
            <field name="model">app.gradebook</field>
            <field name="arch" type="xml">
                <tree create="1" edit="1" delete="0" >
                    <field name="name"/>
                    <field name="admission_id" invisible="1" />
                    <field name="admission_name_id" readonly="1"/>                    
                    <field name="batch_id"/> 
                    <field name="course_id"/>    
                    <field name="subject_id"/>   
                    <field name="marks"/>
                    <field name="review_id"  optional="hide" />
                    <field name="faculty_id"  optional="hide" />                                
                    <field name="exclude"  optional="hide" />
                    <field name="type"  optional="show" />
                    <field name="active"  optional="hide" />
                </tree>
            </field>
        </record>

        <record id="app_gradebook_search" model="ir.ui.view">
            <field name="name">app_gradebook_search</field>
            <field name="model">app.gradebook</field>
            <field name="arch" type="xml">
                <search string="Calificaiones Results">
                    <group expand="1" string="Group By">
                        <filter string="subject_id" name="group_subject_id" context="{'group_by':'subject_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="act_app_gradebook_view" model="ir.actions.act_window">
            <field name="name">Calificaciones</field>
            <field name="res_model">app.gradebook</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
        </record>

    </data>
</odoo>


 

