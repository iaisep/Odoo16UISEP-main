<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="link_sign_website_template_sale_order" model="mail.template">
            <field name="name">Link de Firma de Matrícula - Usuarios Website</field>
            <field name="model_id" ref="isep_website_sale_custom.model_sale_order"/>
            <field name="email_from"></field>
            <field name="email_to">{{ object.partner_id.email_formatted }}</field>
            <field name="subject">¡Firma tu matrícula y da el primer paso hacia tu futuro en ISEP!</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        <p>Estimado/a <t t-out="object.partner_id.name"></t>,</p>
                        <p>¡Estás a un solo paso de comenzar tu camino en la Universidad ISEP!</p>
                        <p>Haz clic en el siguiente enlace para firmar tu matrícula y continuar con tu proceso de ingreso.</p>
                        <p>Enlace de firma: <t t-out="object.sign_id.share_link_website"></t><br/></p>
                        <p>Estamos emocionados de que formes parte de nuestra comunidad. !Sigue avanzando hacia tus sueños!</p><br/><br/>
                        <p>Universidad ISEP</p>
                        
                    </p>
                </div>
            </field>
        </record>
    </data>

    

</odoo>