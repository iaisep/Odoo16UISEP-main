<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="question_upload_file" name="Question: Upload File">
        <div class="o_survey_comment_container p-0">
            <input type="file" class="form-control o_survey_question_upload_file" t-att-data-name="question.id" t-att-data-question-type="question.question_type" t-att-id="'file_name_%d' % question.id" t-att-multiple="question.upload_multiple_file" />
            <t t-foreach="answer_lines.value_file_ids" t-as="file">
                <div>
                    <a t-attf-href="/web/binary/download/#{file.id}" aria-label="Download" title="Download">
                        <i class="fa fa-download" />
                        <span><t t-esc="file.name" /></span>
                    </a>
                </div>
            </t>
        </div>
    </template>

    <template id="review_upload_file" name="Review: Upload File">
        <div class="o_survey_file_container">
            <t t-foreach="answer_lines.value_file_ids" t-as="file">
                <div>
                    <a t-attf-href="/web/binary/download/#{file.id}" aria-label="Download" title="Download">
                        <i class="fa fa-download" />
                        <span><t t-esc="file.name" /></span>
                    </a>
                </div>
            </t>
        </div>
    </template>

    <template id="question_container" inherit_id="survey.question_container">
        <xpath expr="//div[hasclass('o_survey_question_error')]" position="before">
            <t t-if="question.question_type == 'file'"><t t-call="isep_survey_attachment.question_upload_file"/></t>
        </xpath>
    </template>

    <template id="survey_page_print" inherit_id="survey.survey_page_print">
        <xpath expr="//div[hasclass('o_survey_question_error')]" position="before">
            <t t-if="question.question_type == 'file'"><t t-call="isep_survey_attachment.review_upload_file"/></t>
        </xpath>
    </template>

    <template id="remove_logo_odoo" inherit_id="web.brand_promotion_message">
        <xpath expr="//t" position="replace">
        <t name="Brand Promotion Message" t-name="web.brand_promotion_message">
           <img width="62" height="20" style="width: auto; height: 1em; vertical-align: sub;" t-if="env.company.logo" t-att-src="image_data_uri(env.company.logo)" alt="Logo"/>
            </t>
        </xpath>
    </template>


</odoo>
