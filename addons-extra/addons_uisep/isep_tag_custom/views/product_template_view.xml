<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_view_product_template_form_tag" model="ir.ui.view">
            <field name="name">inherit_view_product_template_form_tag</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">        
                <xpath expr="//field[@name='description_sale']" position="after">
                    <field name="tag_crm_id" options="{'no_quick_create': True,'no_create_edit': True}"  />
                    <field name="tag_crm_id_interes" options="{'no_quick_create': True,'no_create_edit': True}"  />
                    <field name="tag_crm_id_confirm" options="{'no_quick_create': True,'no_create_edit': True}"  />  
                </xpath>          
            </field>
        </record>
        
    </data>
</odoo>