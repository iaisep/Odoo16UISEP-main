            <field name="subject">Document Reminder</field>
            <field name="email_from">{{  user.company_id.email }}</field>
            <field name="email_to">{{ object.email_formatted }}</field>
          
            <field name="body_html" type="html">

               <table border="0" cellpadding="0" cellspacing="0">
                     <tr style='background-color: #002F5D;'>
                        <td>
                            <h1 style="margin: 0; font-size: 24px; color:#EF660E;">Universidad Isep</h1>
                        </td>
                        <td>
                          <img src="Automation_student_documents_email/static/src/img/Logo-ISEP-Anaranjado.png" alt="Your Company Logo" style="max-width: 150px; margin-bottom: 10px;"/>                            
                        </td>
                    </tr>
                    <tr>
                       <td>
                       <p> <strong style='font-size:16px'>Hello <t t-out="object.name or ''">Name</t>!  </strong></p>
