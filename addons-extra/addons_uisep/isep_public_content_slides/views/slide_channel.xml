<odoo>

    <record id="view_slide_channel_custom_form" model="ir.ui.view">
        <field name="name">slide.channel.form.view</field>
        <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>   
        <field name="model">slide.channel</field>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='content']//field[@name='is_published']" position="attributes">
                <attribute name="widget">boolean_toggle</attribute>
            </xpath>

        </field>
    </record>

</odoo>
