<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data >
    
        <record id="res_partner_tags_view_tree" model="ir.ui.view">
            <field name="name">res_partner_tags.view.tree</field>
            <field name="model">res.partner.tags</field>
            <field name="arch" type="xml">
                <tree string="Tags contacto" create="true"  editable="bottom" delete="true" edit="true">
                    <field name="name"/>
                    <field name="color" widget="color_picker"/>                    
                </tree>
            </field>
        </record>
        
        <record id="action_res_partner_tags" model="ir.actions.act_window">
            <field name="name">Tag contacto</field>
            <field name="res_model">res.partner.tags</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="res_partner_tags_view_tree"/>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                    Crear nuevos registros
              </p>
            </field>
        </record>

        <menuitem
            id="submenu_res_partner_tags"
            name="Tags contacto"
            parent="contacts.res_partner_menu_config"
            action="action_res_partner_tags"
            sequence="2"/>
    
    </data>
    

</odoo>
