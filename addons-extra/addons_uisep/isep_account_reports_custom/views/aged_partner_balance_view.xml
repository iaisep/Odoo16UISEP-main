<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="account_reports_column_token_receivable"
            model="account.report.column">
        <field name="report_id"        ref="account_reports.aged_receivable_report"/>
        <field name="name">Token</field>
        <field name="expression_label">token</field>
        <field name="figure_type">none</field>
        <field name="sequence">7</field>  
    </record>

    <!-- expresión asociada a la línea -->
    <record id="account_reports_expression_token_receivable"
            model="account.report.expression">
        <field name="report_line_id" ref="account_reports.aged_receivable_line"/>
        <field name="label">token</field>
        <field name="engine">custom</field>
        <field name="formula">_report_custom_engine_aged_receivable</field>
        <field name="subformula">token</field>
        <field name="auditable" eval="False"/>
    </record>

</odoo>
