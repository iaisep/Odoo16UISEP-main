<?xml version="1.0" encoding="UTF-8"?>
<odoo>

        <record id="view_op_honor_line_tree" model="ir.ui.view">
            <field name="name">op.honorroll.line</field>
            <field name="model">op.honorroll.line</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="student_id"/>
                    <field name="percentage"/>
                    <field name="year_id" optional="hide"/>
                    <field name="course_id" optional="hide"/>
                    <field name="honor_id" optional="hide"/>
                    <field name="subject_id" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="view_op_honor_line_form" model="ir.ui.view">
            <field name="name">op.honorroll.line.form</field>
            <field name="model">op.honorroll.line</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Honor Roll Line">
                    <sheet>
                        <group>
                            <field name="student_id"/>
                        </group>
                        <group col="4" colspan="4">
                            <field name="year_id"/>
                            <field name="course_id"/>
                            <field name="subject_id"/>
                            <field name="percentage"/>
                            <field name="honor_id" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_op_honor_line_search" model="ir.ui.view">
            <field name="name">op.honorroll.line.search</field>
            <field name="model">op.honorroll.line</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Honor Roll Line">
                    <field name="student_id"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_op_honorroll_line_view">
            <field name="name">Honor Roll Line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.honorroll.line</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_op_honor_line_search"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_op_honoroll_line_view_form">
            <field name="act_window_id" ref="act_op_honorroll_line_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_op_honor_line_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_op_honorroll_line_view_tree">
            <field name="act_window_id" ref="act_op_honorroll_line_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_op_honor_line_tree"/>
        </record>

</odoo>
