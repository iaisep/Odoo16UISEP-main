            <t t-if="state.add_link_title">
                <div t-att-style="'color:'+state.font_color+';font-size:30px;'">
                    <t t-esc="state.add_link_title_name"/>
                </div>
            </t>
            <a t-att-href="state.add_link_content" target="_blank" t-att-style="'color:'+state.font_color+';font-size:20px;'">
