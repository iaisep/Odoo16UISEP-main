<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_all_op_approval">
        <field name="name">Approval</field>
        <field name="description">Helps you manage your institutes different-different users.</field>
        <field name="sequence">109</field>
        <field name="parent_id" eval="False"/>
    </record>
    <record model="ir.module.category" id="module_category_multi_approval">
        <field name="name">Approval</field>
        <field name="description">Helps you manage your Approval Types-related processes such as requests for
            approval etc...
        </field>
        <field name="parent_id" ref="openeducat_multi_approval.module_category_all_op_approval"/>
        <field name="sequence">20</field>
    </record>

    <record id="group_approval_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="module_category_multi_approval"/>
    </record>

    <record id="group_approval_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="module_category_multi_approval"/>
        <field name="implied_ids" eval="[(4, ref('group_approval_user'))]"/>
    </record>
    <record id="base.user_admin" model="res.users">
        <field name="groups_id" eval="[(4,ref('openeducat_multi_approval.group_approval_manager'))]"/>
    </record>
</odoo>
