        <record model="ir.module.category" id="module_category_all_op_quiz">
            <field name="name">Quiz</field>
            <field name="description">Helps you manage your institutes different-different users.</field>
            <field name="sequence">109</field>
            <field name="parent_id" eval="False"/>
        </record>
