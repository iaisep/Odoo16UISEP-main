<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="custom_slide_channel_form" model="ir.ui.view">
            <field name="name">slide_channel_form</field>
            <field name="model">slide.channel</field>
            <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@name='karma_rules']" position="after">                 

                     <page string="Asignaturas" name="op_subject">
                        <field name="op_subject_ids" >
                            <tree create="0" delete="0" edit="0">
                                <field name="code" string="Codigo" />
                                <field name="name" string="Nombre de asignatura" />
                                <field name="type" string="Tipo" />
                                <field name="credit_point" string="Creditos" />
                                <field name="course_id" string="Pertenece al curso de"  />
                            </tree> 
                        </field>
                     </page>

                </xpath>
            
            </field>
        </record>

    </data>
</odoo>


 