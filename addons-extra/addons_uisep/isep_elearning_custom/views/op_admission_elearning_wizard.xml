<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="op_admission_elearning_wizard_form" model="ir.ui.view">
        <field name='name'>op.admission.elearning.wizard.form</field>
        <field name='model'>op.admission.elearning.wizard</field>
        <field name='arch' type='xml'>
            <form string='CAMPUS'>
                <sheet>   
                <h5>Selecciona los cursos que seran visibles para el Alumno desde el Campus.</h5>                 
                    <group>
                        
                        <group>
                            <field name="partner_id"  options="{'no_open': True}" readonly="1" force_save="1"/>
                            <field name="register_id"  options="{'no_open': True}" readonly="1" force_save="1"/>
                        </group>
                        <group>
                            <field name="batch_id"  options="{'no_open': True}" readonly="1" force_save="1"/>
                            <field name="course_id"  options="{'no_open': True}" readonly="1" force_save="1"/>                        
                        </group>                    
                    </group>
                    <field name="subject_line_ids" colspan="2" nolabel="1" >
                        <tree string="Campus Elearning Details" editable="top" create="false" delete="false">
                            <field name="selected" widget="boolean_toggle" force_save="1" attrs="{'readonly': [('slide_channel_id','=', False)]}"/>                            
                            <field name="channel_partner_id" invisible="1" />
                            <field name="code" readonly="1" force_save="1"/>
                            <field name="name" readonly="1" force_save="1"/>
                            <field name="course_id" invisible="1"/>
                            <field name="op_subject_id" invisible="1"/>
                            <field name="slide_channel_id"  options="{'no_open': True}" readonly="1" force_save="1" />
                            
                            
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name='enroll_student' string='Inscribir'
                            confirm="Al aceptar el alumno podra acceder y ver el contenido de las asignaturas marcadas."
                            class='oe_highlight'
                            type='object'/>
                    <button special="cancel" string="Descartar" type="object" class="btn btn-secondary oe_inline"/>
                </footer>
            </form>
        </field>
    </record>

    

    

    <record id="campus_content_elearning" model="ir.actions.act_window">
        <field name="name">Contenido Campus</field>
        <field name="res_model">op.admission.elearning.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="op_admission_elearning_wizard_form"/>
        <field name="target">new</field>
    </record>


</odoo>