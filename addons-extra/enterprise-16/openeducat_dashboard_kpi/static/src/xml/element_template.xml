        </div>
    </t>

    <t t-name="kpi_preview_wrapper_template" owl="1">
        <div t-if="state.message">
            <t t-esc="state.message"/>
        </div>
        <div t-ref="kpiRef" t-if="!state.message">
            <t t-if="state.template == 'kpi_preview_template'" >
                <t t-call="kpi_preview_template"/>
            </t>
            <t t-if="state.template == 'kpi_preview_template_2'" >
                <t t-call="kpi_preview_template_2"/>
            </t>
            <t t-if="state.template == 'kpi_preview_template_3'" >
                <t t-call="kpi_preview_template_3"/>
            </t>
        </div>
    </t>
    <t t-name="list_preview_wrapper_template" owl="1">
        <div t-ref="tileRef">
            <t t-if="state.template == 'db_list_preview'" >
                <t t-call="db_list_preview"/>
            </t>
            <t t-if="state.template == 'state_list_preview_layout_1'" >
                <t t-call="state_list_preview_layout_1"/>
            </t>
            <t t-if="state.template == 'state_list_preview_layout'" >
