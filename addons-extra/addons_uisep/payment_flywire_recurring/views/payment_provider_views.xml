<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_flywire_extended_form" model="ir.ui.view">
        <field name="name">Flywire Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <field name="flywire_default_recipient_id" position="before">
   
                <field name="flywire_recipient_priority" required="code == 'flywire' and state != 'disabled' and flywire_recipient_ids" />
                     
            </field>

        </field>
    </record>

</odoo>
