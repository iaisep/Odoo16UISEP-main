<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="user_profile_content_details_inh" inherit_id="isep_website_custom.user_profile_content_details">
    
        <xpath expr="//div[@t-as='subject']" position="replace">


                                <div class="col-12 col-lg-6" t-foreach="subject_ids" t-as="subject">
                                    
                                    <div class="card mb-2">                                        
                                        <!-- Obtener el id del contenido -->
                                        <t t-set="slide_id" t-value="subject.slide_channel_id.id"/>
                                        <t t-set="can_be_taken" t-value="subject.can_be_taken(user.id)"/>
                                        <div class="card-body o_wprofile_slides_course_card_body p-0 d-flex" t-attf-style="#{'pointer-events: none;cursor: default;' if not can_be_taken or not (slide_id in slide_channel_active_ids) else ''}"  t-attf-onclick="#{'location.href=\'/slides/%s\'' % slide_id if can_be_taken and (slide_id in slide_channel_active_ids) else ''}">

                                            <div class="o_wslides_background_image ps-5 pe-4 rounded-start" t-attf-style="#{'filter: grayscale(0.7);' if not can_be_taken or not (slide_id in slide_channel_active_ids) else ''} height: 72px; background-image: url('/isep_website_custom/static/src/img/icon-subject.png');"/>
                                            <div class="p-2 w-100" style="font-size: 13px;font-weight: 600;">
                                                <span class="mt-0 mb-1" t-if="subject.code"><t t-esc="subject.code"/> - </span>
                                                <span class="mt-0 mb-1" t-field="subject.name"/>   
                                            </div>
                                        </div>
                                    </div>
                                </div>

        </xpath>





    </template>

</odoo>
