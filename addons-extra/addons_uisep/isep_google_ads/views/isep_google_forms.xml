<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form -->
    <record id="isep_google_forms_view" model="ir.ui.view">
        <field name="name">isep.view.portal.form</field>
        <field name="model">isep.google.forms</field>
        <field name="arch" type="xml">
            <form string="Portal Form">
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1" />
                            <field name="team_id" />
                            <field name="campaign_id" />
                            <field name="medium_id" />
                            <field name="source_id" />
                            <field name="country_id" />
                        </group>
                        <group>
                            <field name="creative_id" readonly="1" />
                            <field name="form_id" readonly="1" />
                            <field name="create_date" />
                            <field name="company_id" required="1" options="{'no_open': True,'no_create': True, 'no_create_edit':True}"  />
                            
                        </group>
                    </group>
                    <notebook>
                        <page string="Mappings" name="mappings">
                            <field name="mappings">
                                <tree editable="bottom">
                                    <field name="name" invisible="1" />
                                    <field name="column_id" />
                                    <field name="column_name" />
                                    <field name="odoo_field" />
                                </tree>
                            </field>
                        </page>
                        <page string="Logs" name="google_logs">
                            <field name="lead_logs" readonly="1">
                                <tree>
                                    <field name="name" invisible="1" />
                                    <field name="lead_id" />
                                    <field name="form_id" />
                                    <field name="create_date" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree -->
    <record id="view_tree_isep_google_forms" model="ir.ui.view">
        <field name="name">isep.view.portal.tree</field>
        <field name="model">isep.google.forms</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="form_id" />
                <field name="creative_id" />
                <field name="campaign_id" />
                <field name="medium_id" />
                <field name="country_id" />
                <field name="create_date" />
            </tree>
        </field>
    </record>

    <record id="action_isep_google_forms_menu" model="ir.actions.act_window">
        <field name="name">portal leads</field>
        <field name="res_model">isep.google.forms</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="view_tree_isep_google_forms" />
    </record>



</odoo>