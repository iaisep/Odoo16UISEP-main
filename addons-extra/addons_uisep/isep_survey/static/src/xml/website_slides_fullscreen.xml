<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="website.slides.fullscreen.certification">
        <div class="d-flex flex-column" style="width: 100%; height: 100vh; background: #f9f9f9; margin: 0;">            
                <t t-if="widget.get('slide').category === 'certification'">
                    <header class="bg-primary text-white text-center">
                        <p>
                            <h6>
                                <t t-esc="widget.get('slide').name"/>
                            </h6>
                        </p>
                    </header>
                    <div class="flex-grow-1 overflow-auto px-3">
                        <p>
                            <t t-raw="slide_description"/>
                        </p>
                        <p>
                            <t t-raw="survey_description"/>
                        </p>
                    </div>
                    <footer class="text-white text-center py-3" style="background: #1e2229;margin-bottom: 50px;">
                        <a class="btn btn-primary" t-att-href="'/slides_survey/slide/get_certification_url?slide_id=' + widget.get('slide').id" target="_blank">
                            <i class="fa fa-graduation-cap"></i>
                            <span t-if="widget.get('slide').isMember">Comenzar [Begin]</span>
                            <span t-else="">Test (Unscored)</span>
                        </a>
                    </footer>
                </t>
        </div>
    </t>

</templates>
