<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mail_parser_config_tree" model="ir.ui.view">
            <field name="name">mail_parser_config_tree</field>
            <field name="model">mail.parser.config</field>
            <field eval="100" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Configurar parser email" create="true" import="true">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="reference" />
                    <field name="tag" />
                    <field name="attribute" />
                    <field name="attribute_value" />                    
                </tree>
            </field>
        </record>

        <record id="mail_parser_config_form" model="ir.ui.view">
            <field name="name">mail_parser_config_form</field>
            <field name="model">mail.parser.config</field>
            <field eval="100" name="priority"/>
            <field name="arch" type="xml">
                <form string="Configurar parser email">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>                        
                            <group>
                                <field name="reference" required="1"/>
                                <field name="tag" />
                                <field name="attribute" />
                                <field name="attribute_value" />
                            </group>
                            <group>
                                <field name="create_date" string="Fecha creacion"/>
                            </group>   
                            <field name="note" />
                        </group>    
                    </sheet>                
                </form>
            </field>
        </record>

        <record id="action_parser_config_mail" model="ir.actions.act_window">
            <field name="name">Configurar parser mail</field>
            <field name="res_model">mail.parser.config</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="mail_parser_config_tree"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                        Crear nuevos registros
                </p>
            </field>
        </record>

        <menuitem id="submenu_config_chatgpt_ia"
            name="Configuraciones ChatGPT"
            sequence="50"
            parent="helpdesk.helpdesk_menu_config"/>

        <menuitem id="submenu_parser_config_mail" 
            name="Configurar parser mail" 
            parent="connect_chatgpt.submenu_config_chatgpt_ia" 
            action="action_parser_config_mail" 
            sequence="1"/>

        <record id="view_config_despedida_tree" model="ir.ui.view">
            <field name="name">view_config_despedida_tree</field>
            <field name="model">helpdesk.finish.gpt</field>
            <field eval="100" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Configurar parser email" create="true" import="true" editable="top">
                    <field name="name"/>                   
                </tree>
            </field>
        </record>
        <record id="action_config_despedida" model="ir.actions.act_window">
            <field name="name">Configurar despedidas usuario</field>
            <field name="res_model">helpdesk.finish.gpt</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_config_despedida_tree"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                        Crear nuevos registros
                </p>
            </field>
        </record>
        
        <menuitem id="submenu_config_despedida" 
            name="Configurar despedidas usuario" 
            parent="connect_chatgpt.submenu_config_chatgpt_ia" 
            action="action_config_despedida" 
            sequence="2"/>

    </data>
</odoo>