<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="0">
        <record id="view_sale_order_date_filter_wizard_form" model="ir.ui.view">
            <field name="name">sale.order.date.filter.wizard.form</field>
            <field name="model">sale.order.date.filter.wizard</field>
            <field name="arch" type="xml">
                <form string="Filtrar Órdenes de Venta">
                    <group>
                        <field name="date_field"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <footer>
                        <button string="Aplicar filtro" type="object" name="action_apply_filter" class="btn-primary"/>
                        <button name="action_print_report" string="Imprimir Reporte PDF" type="object" class="btn-secondary"/>
                        <button name="action_export_excel" string="Exportar Excel" type="object" class="btn-secondary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_sale_order_date_filter_wizard" model="ir.actions.act_window">
            <field name="name">Filtrar Órdenes de Venta</field>
            <field name="res_model">sale.order.date.filter.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
