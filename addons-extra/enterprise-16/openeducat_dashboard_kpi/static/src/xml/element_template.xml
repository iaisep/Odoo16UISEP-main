    <t t-name="list_view_container" owl="1">
        <div class="container-fluid">
            <div  t-if="state.message">
                <t t-esc="state.message"/>
            </div>
            <div class="row"  t-if="!state.message">
                <div class="card shadow col-md-9 p-0 m-0">
                    <div class="p-3 py-3 d-flex flex-row align-items-center justify-content-between ">
                        <h6 class="m-0 fw-bold h3 chart_heading" t-att-title="state.list_view_name">
                            <t t-esc="state.list_view_name"/>
                        </h6>
                    </div>
                    <div class="card-body table-responsive MaxTableContent">
                        <t t-if="state.json_list_data">
                            <table id="ListViewTable" class="table table-hover"
                                   t-att-data-model="state.json_list_data['model']">
                                <thead>
                                    <tr>
                                        <t t-foreach="state.json_list_data['label']" t-as="table_header" t-key="table_header">
                                            <th>
                                                <t t-esc="table_header"/>
                                            </th>
                                        </t>
                                        <th/>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="state.data_rows" t-as="table_row" t-key="table_row.id">
                                        <tr class="tr" t-att-data-record-id="table_row.id">
                                            <t t-foreach="table_row['data']" t-as="row_data" t-key="row_data">
                                                <td>
                                                    <t t-esc="row_data"/>
                                                </td>
                                            </t>
                                            <td>
                                                <i id="item_info" t-att-data-model="state.json_list_data['model']"
                                                   t-att-data-record-id="table_row['id']" class="fa fa-pencil"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <tr t-if="count">
                                        <td class="pro_font">
                                            <span>(
                                                <t t-esc="count"/>
                                                records more)
                                            </span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>
                        <t t-else="">
                            No Data Present
                        </t>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="kpi_preview_template" owl="1">
        <div class="dashboard_kpi dashboard_custom_scrollbar dashboard_kpi_preview dashboard_element_preview_color_picker">
            <div class="dashboard_icon_layout_5 dashboard_icon_color_picker">
                <t t-if="state.selection_icon_field=='Custom'">
                    <t t-if="state.img_src">
                        <img t-att-src="state.img_src" class="dashboard_element_image"/>
                    </t>
                </t>
                <t t-if="state.selection_icon_field=='Default'">
                    <span t-att-style="'color:'+ state.icon_color + ';'" t-att-class="'fa fa-' + state.default_icon + ' fa-5x'"/>
                </t>
            </div>
            <div class="dashboard_element_body_layout_5">
                <div class="dashboard_kpi_name_preview">
                    <t t-esc="state.name"/>
                </div>
                <div class="dashboard_kpi_count_preview" t-att-title="state.count_1_tooltip">
                    <t t-esc="state.count_1"/>
                </div>
            </div>
            <div class="row d-flex ms-auto me-auto">
                <t t-if="state.enable_goal">
                    <div class="col">
                        <div style="color: rgba(0, 0, 0, 0.61);">
                            <span>vs Target</span>
                        </div>
                        <div>

                            <span class="target_deviation" style="font-size : medium;">
                                <t t-esc="state.target_deviation"/>
                                <t t-if="state.target_arrow">
                                    <i t-att-class="'fa fa-arrow-'+ state.target_arrow"/>
                                </t>
                            </span>
                        </div>
                    </div>
                </t>
                <t t-if="state.previous_data_field">
                    <div class="col" style="text-align:right;">
                        <div style="color: rgba(0, 0, 0, 0.61);">
                            <span>vs Prev</span>
                        </div>
                        <div>
                            <span class="state.pre_deviation" style="font-size : medium;">
                                <t t-esc="state.pre_deviation"/>
                                <i t-att-class="'fa fa-arrow-'+ state.pre_arrow"/>
                            </span>
                        </div>
                    </div>
                </t>
            </div>
        </div>
    </t>

    <t t-name="dashboard_theme_view" owl="1">
        <div class="dashboard_theme_view_render">
            <t t-foreach="themes" t-as="theme" t-key="theme">
                <div class="dashboard_theme_input_container">
                    <input t-attf-class="dashboard_theme_input color_#{theme.name}" type="radio" name="dashboard_theme_input"
                           t-attf-label="#{theme.label} Theme" t-att-value="theme.name" t-on-change="onSelect"
                            t-att-checked="theme.name == props.value"/>

                    <span class="checkmark"/>
                </div>
            </t>
        </div>
    </t>

    <t t-name="kpi_preview_template_2" owl="1">
        <div class="dashboard_kpi dashboard_custom_scrollbar  dashboard_kpi_preview dashboard_element_preview_color_picker">
            <div class="dashboard_icon_layout_5 dashboard_icon_color_picker">
                <t t-if="state.selection_icon_field=='Custom'">
                    <t t-if="state.img_src">
                        <img t-att-src="state.img_src" class="dashboard_element_image"/>
                    </t>
                </t>
                <t t-elif="state.selection_icon_field=='Default'">
                    <span t-att-style="'color:'+ state.icon_color + ';'" t-att-class="'fa fa-' + state.default_icon + ' fa-5x'"/>
                </t>
            </div>
            <div class="dashboard_element_body_layout_5">
                <div class="dashboard_kpi_name_preview">
                    <t t-esc="state.name"/>
                </div>
                <div class="dashboard_kpi_count_preview" t-att-title="state.count_tooltip">
                    <span>
                        <t t-esc="state.count"/>
                        <t t-if="state.target_view =='Progress Bar' and state.target_enable">/
                            <t t-esc="state.target"/>
                        </t>
                    </span>
                </div>
            </div>
            <t t-if="state.enable_goal and state.target_enable">
                <t t-if="state.target_deviation and state.target_view =='Number'">
                    <div class="text-center">
                        <div>
                            <span class="kpi_target_grey">vs Target</span>
                        </div>
                        <div>
                            <span class="target_deviation">
                                <t t-esc="state.target_deviation"/>
                                <t t-if="state.pre_arrow">
                                    <i t-att-class="'fa fa-arrow-'+ state.pre_arrow"/>
                                </t>
                            </span>
                        </div>
                    </div>
                </t>
                <t t-if="state.target_progress_deviation and state.target_view =='Progress Bar'">
                    <div class="text-center  progress">
                        <div>
                            <progress id="progressbar" value="0" max="100"/>
                        </div>
                        <div class="text-center">
                            <t t-esc="state.target_progress_deviation"/>
                        </div>
                    </div>
                </t>
            </t>
        </div>
    </t>

    <t t-name="kpi_preview_template_3" owl="1">
        <div class="dashboard_kpi dashboard_custom_scrollbar  dashboard_kpi_preview dashboard_element_preview_color_picker">
            <div class="dashboard_icon_layout_5 dashboard_icon_color_picker">
                <t t-if="state.selection_icon_field=='Custom'">
                    <t t-if="state.img_src">
                        <img t-att-src="state.img_src" class="dashboard_element_image"/>
                    </t>
                </t>
                <t t-elif="state.selection_icon_field=='Default'">
                    <span t-att-style="'color:'+ state.icon_color + ';'" t-att-class="'fa fa-' + state.default_icon + ' fa-5x'"/>
                </t>
            </div>
            <div class="dashboard_element_body_layout_5">
                <div class="dashboard_kpi_name_preview">
                    <t t-esc="state.name"/>
                </div>
                <div class="dashboard_kpi_count_preview" t-att-title="state.count_1_tooltip">
                    <span class="count">
                        <t t-esc="state.count_1"/>
                    </span>
                    /
                    <span>
                        <t t-esc="state.target"/>
                    </span>
                </div>
            </div>
            <div class="text-center progress progress-bar" style="background:transparent;box-shadow:none;bottom:15%;">
                <div >
                    <progress id="progressbar" value="0" max="100"/>
                </div>
                <div class="text-center">
                    <t t-esc="state.target_progress_deviation"/>%
                </div>
            </div>
            <t t-if="state.previous_data_field and state.previous_period_data">
                <div class="text-center mt-1">
                    <div>
                        <span>vs Prev</span>
                    </div>
                    <div>
                        <t t-esc="state.previous_period_data"/>
                        <span class="pre_deviation">
                            <t t-esc="state.pre_deviation"/>
                            <i t-att-class="'fa fa-arrow-'+ state.pre_arrow"/>
                        </span>
                    </div>
                </div>
            </t>
        </div>
    </t>

    <t t-name="widget_toggle">
        <div class="select_dashboard_item_toggle">
            <div class="select_icon_div">
                <input id="default_icon" type="radio" name="default_custom_icon_toggle"
                       t-on-change="onSelect" class="toggle_icon_input" value="Default"/>
                Default Icons
            </div>
            <div class="select_icon_div">
                <input id="custom_icon" type="radio" name="default_custom_icon_toggle" class="toggle_icon_input"
                       t-on-change="onSelect" value="Custom"/>
                Upload Icon
            </div>
        </div>
    </t>
    <t t-name="widget_toggle_kpi_target_view" owl="1">
        <div class="select_dashboard_item_toggle">
            <div class="select_icon_div">
                <input id="default_icon" type="radio" name="default_custom_icon_toggle"
                       t-on-change="onSelect" t-att-checked="'Number' == props.value"
                       class="toggle_icon_input" value="Number"/>
                Number
            </div>
            <div class="select_icon_div">
                <input id="custom_icon" type="radio" name="default_custom_icon_toggle" class="toggle_icon_input"
                       t-on-change="onSelect" t-att-checked="'Progress Bar' == props.value"
                       value="Progress Bar"/>
                Progress Bar
            </div>
        </div>
    </t>
    <t t-name="kpi_type_selection_widget" owl="1">
        <div class="select_dashboard_item_toggle">
            <div class="select_icon_div">
                <input id="sum_kpi" type="radio" name="kpi_compare_field"
                       t-on-change="onSelect" t-att-checked="'None' == props.value"
                       class="toggle_icon_input" value="None"/>
                None
            </div>
            <div class="select_icon_div">
                <input id="sum_kpi" type="radio" name="kpi_compare_field"
                       t-on-change="onSelect" t-att-checked="'Sum' == props.value"
                       class="toggle_icon_input" value="Sum"/>
                Sum
            </div>
            <div class="select_icon_div">
                <input id="ratio_kpi" type="radio" name="kpi_compare_field"
                       t-on-change="onSelect" t-att-checked="'Ratio' == props.value"
                       class="toggle_icon_input" value="Ratio"/>
                Ratio
            </div>
            <div class="select_icon_div">
                <input id="percentage_kpi" type="radio" name="kpi_compare_field"
                       t-on-change="onSelect" t-att-checked="'Percentage' == props.value"
                       class="toggle_icon_input" value="Percentage"/>
                Percentage
            </div>
        </div>
    </t>

    <t t-name="chart_form_view_container" owl="1">
        <div class="container-fluid">
            <div class="row">
                <div class="card shadow p-0 m-0 w-100">
                    <div class="p-3 py-3 d-flex flex-row align-items-center justify-content-between ">
                        <h6 class="m-0 fw-bold h3 chart_heading" t-att-title="this.props.record.data.chart_name">
                            <t t-esc="chart_name"/>
                        </h6>
                    </div>
                    <div t-if="!state.message" class="card-body">
                        <canvas id="MyChart" t-ref="chartRef" height="250px"/>
                    </div>
                    <div t-if="state.message">
                        <t t-esc="state.message"/>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
