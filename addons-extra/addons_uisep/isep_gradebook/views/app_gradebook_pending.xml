<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_app_gradebook_pending_form" model="ir.ui.view">
            <field name="name">Evaluaciones</field>
            <field name="model">app.gradebook.pending</field>
            <field name="arch" type="xml">
                <form string="Search gradebook">
                    <style>
                          .o_form_view .o_form_sheet_bg > .o_form_sheet {
                            width: 98% !important;
                            max-width: 98% !important;

                        }
                    </style>
                    <sheet>
                        <h3>
                            <strong>
                                <field name="name" readonly="1" force_save="1"/>
                            </strong>
                        </h3>
                        <group>
                            <group>
                                <field name="search" colspan="2" nolabel="1" placeholder="Buscar Alumno (Opcional): Ejem: Juan Perez"/>

                                <field name="user_id" options="{'no_create':True,'no_open':True}" />
                                <field name="op_subject_ids" widget="many2many_tags" options="{'no_create':True,'no_open':True}" />
                                <field name="batch_ids" widget="many2many_tags" options="{'no_create':True,'no_open':True}" />

                            </group>
                            <group>
                                <button name="search_gradebook_pending" colspan="2" type="object" string="Buscar [Search]" class="btn btn-primary"/>

                            </group>
                        </group>
                        <!-- options="{'no_create':True,'no_open':True}"  -->
                        <notebook>
                            <page name="Pendiente a Calificar" string="Pendiente a Calificar">
                                <field name="survey_user_input_ids" readonly="1">
                                    <tree string="Evaluaciones" decoration-muted="test_entry == True" create="0" edit="0" delete="0">
                                        <field name="create_date"/>
                                        <field name="survey_type"/>
                                        <field name="course_id" optional="show"/>
                                        <field name="op_subject_id"/>
                                        <field name="batch_id"/>
                                        <field name="partner_id"/>
                                        <field name="email" optional="show"/>
                                        <field name="attempts_number" optional="hide" />
                                        <field name="test_entry" invisible="True"/>
                                        <field name="answer_score_total" />
                                        <field name="state" widget="badge" decoration-success="state == 'done'" decoration-warning="state == 'new'" decoration-info="state == 'in_progress'"/>
                                    </tree>

                                </field>

                            </page>
                        </notebook>



                    </sheet>
                </form>

            </field>
        </record>


        <record id="action_app_gradebook_pending" model="ir.actions.act_window">
            <field name="name">Consultar evaluaciones pendientes</field>
            <field name="res_model">app.gradebook.pending</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="view_app_gradebook_pending_form"/>
        </record>


    </data>



</odoo>
