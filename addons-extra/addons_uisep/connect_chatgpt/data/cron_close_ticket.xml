<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record forcecreate="True" id="ir_cron_auto_close_ticket_gpt" model="ir.cron">
        <field name="name">Cerrado automatico Ticket ChatGPT</field>
        <field name="user_id" ref="base.user_root" />
        <field name="interval_number">7</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall">1</field>
        <field name="model_id" ref="model_helpdesk_ticket"/>
        <field name="state">code</field>
        <field name="active" eval="True"/>
        <field name="code">model.ticket_cron_autoclose_gpt()</field>
    </record>

    <record forcecreate="True" id="ir_cron_auto_close_ticket_gpt48" model="ir.cron">
        <field name="name">Cancelar automatico Ticket ChatGPT</field>
        <field name="user_id" ref="base.user_root" />
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall">1</field>
        <field name="model_id" ref="model_helpdesk_ticket"/>
        <field name="state">code</field>
        <field name="active" eval="True"/>
        <field name="code">model.ticket_cron_autoclose_gpt48()</field>
    </record>

    <record forcecreate="True" id="ir_cron_auto_embbeding_elearning_gpt" model="ir.cron">
        <field name="name">Generar Embbedings masivos Elearning ChatGPT</field>
        <field name="user_id" ref="base.user_root" />
        <field name="interval_number">1</field>
        <field name="interval_type">months</field>
        <field name="numbercall">-1</field>
        <field name="doall">0</field>
        <field name="model_id" ref="model_slide_slide"/>
        <field name="state">code</field>
        <field name="active" eval="False"/>
        <field name="code">model.action_cron_embedding()</field>
    </record>
</odoo>