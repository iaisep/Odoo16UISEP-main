<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="res_company_inherit_module_tree" model="ir.ui.view">
            <field name="name">res_company_inherit_module_form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="m_code"/>
                </field>
            </field>
        </record>
        <record id="res_partnert_inherit_module_form" model="ir.ui.view">
            <field name="name">res_partnert_inherit_module_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <field name="display_name" position="before">
                    <field name="m_code"/>
                </field>
            </field>
        </record>

        <record id="crm_lead_inherit_module_tree" model="ir.ui.view">
            <field name="name">crm_lead_inherit_module_tree</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="m_code"/>
                </field>
            </field>
        </record>

        <record id="sale_order_inherit_module_tree" model="ir.ui.view">
            <field name="name">sale_order_inherit_module_tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_subscription.sale_subscription_view_tree"/>
            <field name="arch" type="xml">
                <field name="percentage_satisfaction" position="before">
                    <field name="m_code" optional="hide"/>
                </field>
            </field>
        </record>

        <record id="product_template_inherit_module_tree" model="ir.ui.view">
            <field name="name">product_template_inherit_module_tree</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="sale_temporal.product_template_tree_view"/>
            <field name="arch" type="xml">
                <field name="display_price" position="before">
                    <field name="m_code" optional="hide"/>
                </field>
            </field>
        </record>        
       
    </data>  
</odoo>
