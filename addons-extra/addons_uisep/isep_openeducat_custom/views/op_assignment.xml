<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="custom_op_assignment_form" model="ir.ui.view">
            <field name="name">op.assignment.form</field>
            <field name="model">op.assignment</field>
            <field name="inherit_id" ref="openeducat_assignment.view_op_assignment_form"/>
            <field name="arch" type="xml">

                
                

                <xpath expr="//page[@name='submissions']" position="replace">
                    <page name="submissions" string="Presentaciones">
                        <field name="assignment_sub_line" colspan="4" nolabel="1">
                            <tree string="Submissions" create="0" delete="0">
                                <button name="open_reg" string=" Abrir " title="Abrir" class="btn btn-info" icon="fa-external-link" type="object"/>
                                <field name="student_id"/>
                                <field name="state"/>
                                <field name="submission_date"/>
                                <button name="unlink" confirm="Eliminar?" title="Remove" icon="fa-times" type="object"/>
                            </tree>
                        </field>
                    </page>
                </xpath>


            </field>
        </record>

    </data>
</odoo>


 

